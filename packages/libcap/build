#!/bin/sh

. config/options

cd $BUILD/$1*

[ "$TARGET_ARCH" = x86_64 -o "$TARGET_ARCH" = powerpc64 ] && suffix=64

export lib="lib$suffix"

make prefix="$LIB_PREFIX" CC="$CC" CFLAGS="$CFLAGS -I`pwd`/libcap/include" AR="$AR" RANLIB="$RANLIB" BUILD_CC="$HOST_CC" BUILD_CFLAGS="$HOST_CFLAGS"
make_install

# remove static library
rm -f .install/$lib/libcap.a
[ -d .install/lib64 ] && mv .install/lib64 .install/lib
