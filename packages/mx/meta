PKG_NAME=mx
PKG_VERSION=1.3.1
PKG_URL="http://source.clutter-project.org/sources/mx/1.3/mx-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="clutter"
PKG_USE="xorg"
PKG_DEPENDS_xorg="libX11 libXcomposite libXdamage libXext libXrandr libXfixes"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="toolkit for the Moblin user experience"
PKG_LONGDESC="The MX toolkit is a GUI toolkit library, using Clutter and is optimized for the Moblin user experience. It consists of various classes useful for building UIs such as Buttons, Tooltips, Scrollbars and others. It also supports styling through CSS stylesheets."
