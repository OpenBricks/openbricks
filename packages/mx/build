#!/bin/sh

. config/options

cd $BUILD/$1*

if pkg_uses $1 xorg; then
  XORG_CONFIG="--with-winsys=x11"
else
  XORG_CONFIG="--with-winsys=none"
fi

do_configure \
  --enable-gtk-doc-html=no \
  --enable-introspection=no \
  --without-startup-notification \
  --without-dbus \
  $XORG_CONFIG \

make
make_install
