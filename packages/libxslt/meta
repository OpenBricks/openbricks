PKG_NAME=libxslt
PKG_VERSION=1.1.26
PKG_URL="ftp://xmlsoft.org/libxslt/libxslt-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libxml2 zlib"
PKG_BUILD_DEPENDS="toolchain libxml2 zlib"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="XSLT processing library"
PKG_LONGDESC="XSLT is an XML language for defining transformations of XML files from XML to some other arbitrary format, such as XML, HTML, plain text, etc. using standard XSLT stylesheets. libxslt is a C library which implements XSLT."
