#!/bin/sh

. config/options

cd $BUILD/$1*

do_configure host \
                 --without-crypto \
                 --without-python
make
make_install toolchain

rm -rf objdir-host
mkdir -p objdir-host
mv .install objdir-host
make clean

do_configure target \
            --without-crypto \
            --without-python
sed -i "s%^prefix=.*%prefix=$LIB_PREFIX%" xslt-config
make
make_install
