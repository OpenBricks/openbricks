PKG_NAME=librsvg
PKG_VERSION=2.34.0
PKG_URL="http://ftp.gnome.org/pub/GNOME/sources/librsvg/2.34/librsvg-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC libcroco gdk-pixbuf pango"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="raster SVG support library"
PKG_LONGDESC="librsvg is a component used within software applications to enable support for SVG-format scalable graphics."
