PKG_NAME=xvinfo
PKG_VERSION=1.1.0
PKG_URL="$XORG_SRCS/app/xvinfo-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libXv"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libXv"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="print out X-Video extension adaptor information"
PKG_LONGDESC="xvinfo  prints  out  the  capabilities of any video adaptors associated with the display that are accessible through the X-Video extension."
