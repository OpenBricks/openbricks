#!/bin/sh

. config/options

cd $BUILD/$1*

if ! pkg_uses $1 devtools; then
  (cd amixer; $CC -o amixer amixer.c $CFLAGS -I../include $LDFLAGS -lasound -lm)
  mkdir -p .install/usr/bin
  cp -f amixer/amixer .install/usr/bin
else
  do_configure \
              --disable-dependency-tracking \
              --enable-alsamixer \
              --with-curses=ncurses \
              --disable-xmlto
  make
  make_install
fi

