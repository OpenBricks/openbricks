PKG_NAME=alsa-utils
PKG_VERSION=1.0.28
PKG_URL="http://ftp.osuosl.org/pub/blfs/conglomeration/alsa-utils/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC alsa-lib"
PKG_BUILD_DEPENDS="toolchain alsa-lib"
PKG_USE="devtools"
PKG_DEPENDS_devtools="ncurses"
PKG_RUN_DEPENDS_devtools="bash dialog"
PKG_PRIORITY=standard
PKG_SECTION=sound
PKG_SHORTDESC="Utilities for configuring and using ALSA"
PKG_LONGDESC="This package contains various utilities for configuring and using ALSA. ALSA is the Advanced Linux Sound Architecture."
