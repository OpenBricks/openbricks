PKG_USE="openssl"
PKG_DEPENDS_openssl="openssl"
PKG_PRIORITY=optional
PKG_SECTION=python
PKG_SHORTDESC="an interactive high-level object-oriented language"
PKG_LONGDESC="Python, the high-level, interactive object oriented language, includes an extensive class library with lots of goodies for network programming, system administration, sounds and graphics."
