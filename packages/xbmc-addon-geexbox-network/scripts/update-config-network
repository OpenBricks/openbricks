#!/bin/sh

if [ -f /root/.xbmc/userdata/addon_data/geexbox.addon/settings.xml ] ; then
  while read i ; do
    echo $i| grep "setting " | sed -e 's%<setting id="%%'\
                                   -e 's%" value%%' \
                                   -e 's% />%%' >>/etc/network2
  done < /root/.xbmc/userdata/addon_data/geexbox.addon/settings.xml
fi
mv /etc/network /etc/network-$(date +%Y%M%d%H%M)
mv /etc/network2 /etc/network
systemctl restart connman.service
