+void dump_stream_info()
+{
+  int fd, len, pts;
+  FILE * log_file;
+
+  if(!info_fifo) return;
+
+  mkfifo(info_fifo, 0644);
+  fd = open(info_fifo, O_RDWR | O_NONBLOCK);
+  if(fd < 0) return;
+  log_file = fdopen(fd, "w");
+  if(!log_file) return;
+
+  fprintf(log_file, "ID_FILENAME=%s\n", strcmp(filename, bg_video) ? \
+                    mp_basename(filename) : bg_lcdbanner);
