PKG_NAME=inadyn
PKG_VERSION=1.96.2
PKG_URL="http://cdn.dyndns.com/inadyn.zip"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain gmake"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="a free DynDNS client."
PKG_LONGDESC="INADYN is a free DynDNS client. It gives the possibility to have your own fixed hostname registered on the internet, although your IP might be changing. It checks periodically whether the IP address stored by the DNS server is the real current IP address of the machine that is running INADYN."