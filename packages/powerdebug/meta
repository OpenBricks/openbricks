PKG_NAME=powerdebug
PKG_VERSION=2011.07
PKG_URL="http://launchpad.net/linaro-powerdebug/2011/$PKG_VERSION/+download/linaro-powerdebug-0.5.1-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC ncurses"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="Tool to display regulator, sensor and clock information"
PKG_LONGDESC="PowerDebug is a tool to display regulator, sensor and clock information. Information is refreshed every few seconds.  You can also use dump option to display the information just once."
