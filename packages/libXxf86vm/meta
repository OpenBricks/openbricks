PKG_NAME=libXxf86vm
PKG_VERSION=1.1.1
PKG_URL="http://xorg.freedesktop.org/archive/individual/lib/libXxf86vm-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xf86vidmodeproto libX11 libXext"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libXext"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 XFree86 video mode extension library"
PKG_LONGDESC="libXxf86vm provides an interface to the XFree86-VidModeExtension extension, which allows client applications to get and set video mode timings in extensive detail. It is used by the xvidtune program in particular."
