PKG_NAME=clutter
PKG_VERSION=1.6.20
PKG_URL="http://source.clutter-project.org/sources/clutter/1.6/clutter-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="cairo GLib gtk pango json-glib"
PKG_USE="opengl xorg"
PKG_DEPENDS_xorg="libX11 libXcomposite libXdamage libXfixes libXext libXi"
PKG_DEPENDS_opengl="libdrm mesa"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Open GL based interactive canvas library"
PKG_LONGDESC="Clutter is an Open GL based interactive canvas library, designed for creating fast, mainly 2D single window applications such as media box UIs, presentations, kiosk style applications and so on."
