#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib
$SCRIPTS/build openssl

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-static \
            --enable-shared \
            --disable-debug \
            --enable-http \
            --enable-ftp \
            --enable-file \
            --disable-ldap \
            --enable-proxy \
            --disable-ipv6 \
            --enable-thread \
            --with-random=/dev/urandom \

make
$STRIP lib/.libs/libcurl*.so*
make install
