PKG_NAME=curl
PKG_VERSION=7.21.7
PKG_URL="http://curl.haxx.se/download/curl-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain zlib gnutls"
PKG_RUN_DEPENDS="$TARGET_LIBC zlib gnutls"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="Multi-protocol file transfer library"
PKG_LONGDESC="libcurl is designed to be a solid, usable, reliable and portable multi-protocol file transfer library."
