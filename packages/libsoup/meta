PKG_VERSION=2.4.1
PKG_REV=1
PKG_DEPENDS="gnutls GLib libxml2 gettext"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="an HTTP library implementation in C"
PKG_LONGDESC="libsoup uses the Glib main loop and is designed to work well with GTK+ applications."
