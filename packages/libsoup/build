#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug"
fi

cd $BUILD/$1*
do_configure \
            --disable-dependency-tracking \
            --disable-glibtest \
            --enable-ssl \
            --without-gnome \
            $DEBUG_CONFIG \

make
make_install
