PKG_NAME=network
PKG_VERSION=2.0
PKG_REV=1
PKG_DEPENDS="busybox bftpd"
[ "$STATS" = yes ] && PKG_DEPENDS="$PKG_DEPENDS stats"
[ "$SAMBA" = yes -o "$SAMBA_SERVER" = yes ] && PKG_DEPENDS="$PKG_DEPENDS samba"
if [ "$WIFI" = yes ]; then
  PKG_DEPENDS="$PKG_DEPENDS wireless-tools acx"
  [ "$NDISWRAPPER" = yes ] && PKG_DEPENDS="$PKG_DEPENDS ndiswrapper"
  [ "$WPA_SUPPLICANT" = yes ] && PKG_DEPENDS="$PKG_DEPENDS wpa-supplicant"
  [ "$OLSR" = yes ] && PKG_DEPENDS="$PKG_DEPENDS olsrd"
fi
PKG_PRIORITY=optional
PKG_SECTION=admin
PKG_SHORTDESC="GeeXboX networking support"
PKG_LONGDESC="This package contains the GeeXboX networking scripts."
