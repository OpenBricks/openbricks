PKG_NAME=network
PKG_VERSION=2.0
PKG_REV=1
PKG_RUN_DEPENDS="busybox bftpd"
[ "$SAMBA" = yes -o "$SAMBA_SERVER" = yes ] && PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS samba"
if [ "$WIFI" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS wireless-tools acx"
  [ "$NDISWRAPPER" = yes -a "$TARGET_ARCH" = i386 ] && PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS ndiswrapper"
  [ "$WPA_SUPPLICANT" = yes ] && PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS wpa-supplicant"
  [ "$OLSR" = yes ] && PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS olsrd"
fi
PKG_USE="uclibc eglibc glibc"
PKG_RUN_DEPENDS_uclibc=uclibc-network
PKG_RUN_DEPENDS_glibc=glibc-network
PKG_RUN_DEPENDS_eglibc=eglibc-network
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="$DISTRONAME networking support"
PKG_LONGDESC="This package contains the $DISTRONAME networking scripts."
