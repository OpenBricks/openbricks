PKG_NAME=gupnp-av
PKG_VERSION=0.5.9
PKG_URL="http://www.gupnp.org/sites/all/files/sources/gupnp-av-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain gupnp"
PKG_RUN_DEPENDS="$TARGET_LIBC gupnp"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Audio/Visual utility library for GUPnP"
PKG_LONGDESC="An audio/visual utility library for GUPnP, providing DIDL parser/writer and search criteria parser objects."
