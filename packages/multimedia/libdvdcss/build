#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_autoconf

do_build() {
  if [ "$1" = shared ]; then
    extra_config="--enable-shared --disable-static"
  else
    extra_config="--disable-shared --enable-static"
  fi

  rm -rf obj-$1
  mkdir -p obj-$1
  cd obj-$1

  STRIP=$TARGET_STRIP \
  CC=$TARGET_CC CFLAGS="$TARGET_CFLAGS $2" \
  PKG_CONFIG_PATH=$LIB_PREFIX/lib/pkgconfig \
  ../configure  --host=$TARGET_NAME \
                --build=$HOST_NAME \
                --prefix=/usr \
                --disable-debug \
                $extra_config
  
  make
  make_install
  cd ..
}

do_build shared ""
do_build static "-D_XBMC"

for f in obj-static/.install/usr/lib/*.a; do
  cp $f obj-shared/.install/usr/lib/$(basename $f .a)-kodi.a
done

ln -sf obj-shared/.install
