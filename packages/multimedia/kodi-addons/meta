PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="Addons for Kodi"
PKG_LONGDESC="This is a meta package that pulls in all Kodi addons"


