#!/bin/sh

. config/options

#export LD_LIBRARY_PATH=$SYSROOT_PREFIX/lib:$SYSROOT_PREFIX/usr/local/lib:$SYSROOT_PREFIX/usr/lib:$LD_LIBRARY_PATH

cd $BUILD/$1*

#export LDFLAGS="$LDFLAGS -lm -ldl -lavcodec -lavformat -lavutil -lpostproc -lswscale"


do_configure \
	--disable-asm \
	--enable-pic \
	--enable-shared \
	--enable-pthread \
	--host=$TARGET_NAME \
	--sysroot=$SYSROOT_PREFIX \

make
do_strip bin
make_install

