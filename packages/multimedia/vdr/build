#  VDR_DEFINES="$VDR_DEFINES -DUSE_$EXTNAME"
#done
#[ -n "$VDR_DEFINES" ] && echo "DEFINES += $VDR_DEFINES" >> Make.config

make && make include-dir # latter one to build extra plugins

do_strip bin lib$1.so.*

