#    . $PACKAGES/$plugin/config/vdr
#    ACTIVE_EXTENSIONS="$ACTIVE_EXTENSIONS $VDR_EXTENSIONS"
#  fi
#done
cd $PKG_BUILD_DIR
#cp $ROOT/$PACKAGES/$1/config/Make.config.$PKG_VERSION.bis Make.config
cp $ROOT/$PACKAGES/$PKG_SECTION/$PKG_NAME/config/Make.config.$PKG_VERSION Make.config

sed -i "s|#DVBDIR   =|DVBDIR=$SYSROOT_PREFIX/usr|" Make.config
#sed -i "s|#INCDIR       =|INCDIR=$SYSROOT_PREFIX/usr/include|" Make.config
sed -i "s|#INCDIR       =|INCDIR=.install|" Make.config

[ "$TARGET_LIBC" = "uclibc" ] && echo 'LIBS += -liconv' >>Make.config

#for ext in $ACTIVE_EXTENSIONS; do
#  EXTNAME=`echo $ext | tr a-z A-Z`
