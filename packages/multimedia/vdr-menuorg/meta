PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="VDR -- menuorg plugin"
PKG_LONGDESC="vdr-menuorg is a plugin for VDR, the Video Disk Recorder. It enables you to organize OSD menus with sub menus."
