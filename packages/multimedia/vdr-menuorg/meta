PKG_VERSION=0.4.4
PKG_URL="$DISTRO_SRCS/vdr-menuorg-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libxml++ glibmm"
