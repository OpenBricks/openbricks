#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_autoconf
do_configure --disable-werror \
             --disable-extra-warnings \
             --disable-optimizations \
             --disable-examples \
             --disable-bdjava \
             --disable-doxygen-doc \
             --disable-doxygen-dot \
             --disable-doxygen-man \
             --disable-doxygen-rtf \
             --disable-doxygen-xml \
             --disable-doxygen-chm \
             --disable-doxygen-chi \
             --disable-doxygen-html \
             --disable-doxygen-ps \
             --disable-doxygen-pdf \
             --with-gnu-ld

make
make_install
