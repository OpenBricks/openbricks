PKG_NAME=libbluray
PKG_VERSION=0.6.2
PKG_URL="ftp://ftp.videolan.org/pub/videolan/${PKG_NAME}/${PKG_VERSION}/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libxml2"
PKG_BUILD_DEPENDS="toolchain libxml2 freetype"
PKG_USE="aacs"
PKG_RUN_DEPENDS_aacs="libaacs"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="Blu-ray playback library"
PKG_LONGDESC="libbluray is an open-source library designed for Blu-Ray Discs playback for media players, like VLC  or MPlayer."
