PKG_NAME=libopenmpt
PKG_VERSION="0.2.5787-beta16"
PKG_URL="https://lib.openmpt.org/files/${PKG_NAME}/src/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC zlib"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="OpenMPT based module player library"
PKG_LONGDESC="libopenmpt is a cross-platform C++ and C module playback library. It is based on the player code of the Open ModPlug Tracker project."
