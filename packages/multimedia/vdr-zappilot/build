#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-$VDR_VERSION`

cd $BUILD/$1*

make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale" \

get_meta vdr
verlte 1.7.36 $PKG_VERSION && VDRINS="no" || VDRINS="yes"
if [ $VDRINS = "yes" ]; then
  make_install
  rm -rf .install-debuginfo || true
else
  do_strip bin lib$1.so.*
fi


