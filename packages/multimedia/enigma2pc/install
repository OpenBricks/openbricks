#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

do_install usr/bin
do_install usr/share
do_install usr/lib/libopen.*
do_install usr/lib/enigma2
do_install etc

rm -rf $INSTALL/etc/enigma2
cp -a $ROOT/$PACKAGES/$PKG_SECTION/$1/config/enigma2 $INSTALL/etc/

cp $ROOT/$PACKAGES/$PKG_SECTION/$1/scripts/runenigma2 $INSTALL/usr/bin

mkdir -p $INSTALL/etc/lirc
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config/lircrc.enigma2pc $INSTALL/etc/lirc
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config/logo.mvi $INSTALL/etc/tuxbox
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config/satellites_extra.xml $INSTALL/etc/tuxbox
cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config/terrestrial.xml $INSTALL/etc/tuxbox

mkdir -p $INSTALL/usr/local/e2
ln -sf "/etc" $INSTALL/usr/local/e2/etc

ln -sf video $INSTALL/hdd

mkdir -p $INSTALL/lib/systemd/system/enigma2pc.target.wants
ln -s ../oscam.service $INSTALL/lib/systemd/system/enigma2pc.target.wants
