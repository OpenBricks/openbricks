#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

get_meta $1

. config/options

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-$VDR_VERSION`

cd $BUILD/${PKG_NAME}-${PKG_VERSION}
make \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale"

get_meta vdr
verlte 1.7.36 $PKG_VERSION && VDRINS="no" || VDRINS="yes"
if [ $VDRINS = "yes" ]; then
  make_install
  rm -rf .install-debuginfo || true
else
  do_strip bin lib$1.so.*
fi

