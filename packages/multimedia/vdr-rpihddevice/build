
#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

get_meta linux
verlte 3.6.11 $PKG_VERSION && INSDVB="yes" || INSDVB="no"
if [ $INSDVB = "no" ]; then
   DVB_DIR="$SYSROOT_PREFIX/usr/include"
else
   DVB_DIR="../linux"
fi

get_meta $1
VDR_DIR=`basename $BUILD/vdr-$VDR_VERSION`

export MAKEFLAGS=-j1

cd $PKG_BUILD_DIR

#if [ "$TARGET_MACHINE" = raspberrypi ]; then
   sed -i "s|SDKSTAGE = /root/SifBoX/build/build.$TARGET_MACHINE.eglibc/toolchain/armv6-openbricks-linux-gnueabihf/sysroot/usr/local|SDKSTAGE = $SYSROOT_PREFIX/usr/local|" Makefile
   sed -i "s|SDKSTAGE = /root/SifBoX/build/build.$TARGET_MACHINE.eglibc/toolchain/armv6-openbricks-linux-gnueabihf/sysroot/usr/local|SDKSTAGE = $SYSROOT_PREFIX/usr/local|" ilclient/Makefile
#else
#  sed -i "s|SDKSTAGE = /root/SifBoX/build/build.raspberrypi2.eglibc/toolchain/armv6-openbricks-linux-gnueabihf/sysroot/usr/local|SDKSTAGE = $SYSROOT_PREFIX/usr/local|" Makefile
#   sed -i "s|SDKSTAGE = /root/SifBoX/build/build.raspberrypi2.eglibc/toolchain/armv6-openbricks-linux-gnueabihf/sysroot/usr/local|SDKSTAGE = $SYSROOT_PREFIX/usr/local|" ilclient/Makefile
#fi

make all \
  VDRDIR="../$VDR_DIR" \
  DVBDIR=$DVB_DIR \
  LIBDIR="." \
  LOCALEDIR="./locale" \

#cp libvdr-rpihddevice.so lib$1.so.${VDR_VERSION}
#do_strip bin lib$1.so.*
get_meta vdr
verlte 1.7.36 $PKG_VERSION && VDRINS="no" || VDRINS="yes"
if [ $VDRINS = "yes" ]; then
  make_install
  rm -rf .install-debuginfo || true
else
  do_strip bin lib$1.so.*
fi

