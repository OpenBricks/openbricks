#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

get_meta linux
verlte 3.6.11 $PKG_VERSION && INSDVB="yes" || INSDVB="no"
if [ $INSDVB = "no" ]; then
   DVB_DIR="$SYSROOT_PREFIX/usr/include"
else
   DVB_DIR="../linux"
fi

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-$VDR_VERSION`

cd $BUILD/$1*
make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  DVBDIR=$DVB_DIR \
  LOCALEDIR="./locale"

do_strip bin lib$1.so.*

