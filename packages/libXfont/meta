PKG_NAME=libXfont
PKG_VERSION=1.4.5
PKG_URL="http://xorg.freedesktop.org/archive/individual/lib/libXfont-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC freetype libfontenc"
PKG_BUILD_DEPENDS="toolchain xproto fontcacheproto xtrans fontsproto freetype libfontenc"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 font rasterisation library"
PKG_LONGDESC="libXfont provides various services for X servers, most notably font selection and rasterisation (through external libraries)."
