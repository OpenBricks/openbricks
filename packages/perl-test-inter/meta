PKG_NAME=perl-test-inter
PKG_VERSION=1.01
PKG_URL="$CPAN_SRCS/S/SB/SBECK/Test-Inter-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="framework for more readable interactive test scripts"
PKG_LONGDESC="This is another framework for writing test scripts. It is loosely inspired by Test::More, and has most of it's functionality, but it is not a drop-in replacement."
