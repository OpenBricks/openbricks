PKG_NAME=libdvdnav
PKG_VERSION=4.1.3
PKG_URL="http://www1.mplayerhq.hu/MPlayer/releases/dvdnav/libdvdnav-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libdvdread"
PKG_BUILD_DEPENDS="toolchain libdvdread"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="DVD navigation library"
PKG_LONGDESC="libdvdnav is a DVD navigation library, which provides an interface to the advanced features of DVDs, like menus and naviation. It contains the VM and other parts useful for writing DVD players."
