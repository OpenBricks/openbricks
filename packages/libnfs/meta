PKG_NAME=libnfs
PKG_VERSION=a966b02
PKG_URL="$DISTRO_SRCS/libnfs-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="library for accessing NFS shares over a network."
PKG_LONGDESC="libnfs is a library for accessing NFS shares over a network."
