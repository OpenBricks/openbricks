do_installdev usr/lib/libnvdioconverter.so
do_installdev usr/lib/libnvdisp*.so
do_installdev usr/lib/libnvec*.so
do_installdev usr/lib/libnvflash.so
do_installdev usr/lib/libnvmm*.so
do_installdev usr/lib/libnvodm*.so
do_installdev usr/lib/libnvos.so
do_installdev usr/lib/libnvrm*.so
do_installdev usr/lib/libnvtest*.so
do_installdev usr/lib/libnvw*.so
