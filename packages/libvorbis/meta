PKG_NAME=libvorbis
PKG_VERSION=1.3.2
PKG_URL="http://downloads.xiph.org/releases/vorbis/libvorbis-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libogg"
PKG_BUILD_DEPENDS="toolchain libogg"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="The Vorbis General Audio Compression Codec"
PKG_LONGDESC="Ogg Vorbis is a fully open, non-proprietary, patent-and-royalty-free, general-purpose compressed audio format for audio and music at fixed and variable bitrates from 16 to 128 kbps/channel."
