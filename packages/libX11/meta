PKG_NAME=libX11
PKG_VERSION=1.3.4
PKG_URL="http://xorg.freedesktop.org/releases/individual/lib/libX11-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libxcb libXau"
PKG_BUILD_DEPENDS="toolchain libxcb libXau xextproto xtrans kbproto inputproto xproto"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="X11 client-side library"
PKG_LONGDESC="This package provides a client interface to the X Window System, otherwise known as 'Xlib'.  It provides a complete API for the basic functions of the window system."
