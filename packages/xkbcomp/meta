PKG_NAME=xkbcomp
PKG_VERSION=1.2.3
PKG_URL="$XORG_SRCS/app/xkbcomp-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="libX11 libxkbfile libxcb libXau"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="XKB keyboard description compiler"
PKG_LONGDESC="The  xkbcomp  keymap  compiler  converts a description of an XKB keymap into one of several output formats.   The most common use  for  xkbcomp is  to create a compiled keymap file (.xkm extension) which can be read directly by XKB-capable X servers or utilities."
