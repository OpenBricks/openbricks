PKG_NAME=xf86-video-s3virge
PKG_VERSION=1.10.4
PKG_URL="http://xorg.freedesktop.org/archive/individual/driver/xf86-video-s3virge-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_ARCH="i386 x86_64"
PKG_BUILD_DEPENDS="toolchain xorg-server"
PKG_RUN_DEPENDS="$TARGET_LIBC xorg-server"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X.Org X server -- S3 ViRGE display driver"
PKG_LONGDESC=" This package provides the driver for the S3 ViRGE and Trio3D family of chipsets.  It does not support Trio64 or S3 96x cards; support for these can be found in the xf86-video-s3 package.  Support for S3 Savage chipsets can be found in xf86-video-savage."
