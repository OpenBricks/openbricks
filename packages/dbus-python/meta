PKG_NAME=dbus-python
PKG_VERSION=0.83.2
PKG_URL="http://dbus.freedesktop.org/releases/dbus-python/dbus-python-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="dbus dbus-glib Python"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=python
PKG_SHORTDESC="simple interprocess messaging system (Python interface)"
PKG_LONGDESC="D-Bus is a message bus, used for sending messages between applications. Conceptually, it fits somewhere in between raw sockets and CORBA in terms of complexity. This package provides a Python interface to D-Bus."
