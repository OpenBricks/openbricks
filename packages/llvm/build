#!/bin/sh

. config/options

cd $BUILD/$1-[0-9]*

mkdir -p objdir-target 
cd objdir-target

[ "$TARGET_ARCH" = i386 ] && ARCH=x86 || ARCH=$TARGET_ARCH

do_configure --enable-polly \
             --enable-optimized \
             --disable-profiling \
             --disable-assertions \
             --disable-expensive-checks \
             --disable-debug-runtime \
             --disable-debug-symbols \
             --enable-jit \
             --disable-docs \
             --disable-doxygen \
             --enable-threads \
             --enable-pthreads \
             --enable-pic \
             --enable-shared \
             --enable-embed-stdcxx \
             --enable-timestamps \
             --enable-targets=$ARCH \
             --disable-libffi \
             --disable-ltdl-install \

export LLVM_TBLGEN="$ROOT/$TOOLCHAIN/bin/llvm-tblgen"

make
make_install
