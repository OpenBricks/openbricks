#!/bin/sh

. config/options

$SCRIPTS/build linux

cd $BUILD/$1*

make \
  KDIR=$(kernel_path) \
  KERNELRELEASE=$(kernel_version) \
  SRCDIR=$(kernel_path) \
  OUTDIR=$(kernel_path) \

install_dir=`pwd`/.install
mkdir -p $install_dir

make install \
  DESTDIR=$install_dir \
  KERNELRELEASE=$(kernel_version) \

mv $install_dir/lib/firmware $install_dir/firmware
rm -f $install_dir/lib/modules/$(kernel_version)/modules.*
