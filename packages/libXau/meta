PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 authorisation library"
PKG_LONGDESC="This package provides the main interface to the X11 authorisation handling, which controls authorisation for X connections, both client-side and server-side."
