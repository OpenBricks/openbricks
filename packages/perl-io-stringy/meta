PKG_NAME=perl-io-stringy
PKG_VERSION=2.110
PKG_URL="$CPAN_SRCS/D/DS/DSKOLL/IO-stringy-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="I/O on in-core objects like strings and arrays"
PKG_LONGDESC="This toolkit primarily provides modules for performing both traditional and object-oriented i/o) on things other than normal filehandles; in particular, IO::Scalar, IO::ScalarArray, and IO::Lines."
