PKG_NAME=pcmciautils
PKG_VERSION=018
PKG_URL="http://ftp.forthnet.gr/pub/linux/utils/kernel/pcmcia/pcmciautils-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain linux sysfsutils"
PKG_PRIORITY=required
PKG_SECTION=admin
PKG_SHORTDESC="PCMCIA utilities for Linux 2.6"
PKG_LONGDESC="This package provides PCMCIA initialisation tools for Linux 2.6. PCMCIA cards are commonly used in laptops to provide expanded capabilities such as network connections, modems, increased memory, etc."
