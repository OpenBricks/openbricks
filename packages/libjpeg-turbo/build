#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

setup_toolchain host
autoreconf -fiv

mkdir -p objdir-host
cd objdir-host
do_configure host
make
make_install toolchain
cd ..

setup_toolchain host
autoreconf -fiv

mkdir -p objdir-target
cd objdir-target
do_configure target
make
make_install
