PKG_NAME=libjpeg-turbo
PKG_VERSION=1.1.1
PKG_URL="$SFNET_SRCS/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="An SIMD optimized JPEG decoding library."
PKG_LONGDESC="libjpeg-turbo is a derivative of libjpeg which uses SIMD instructions (MMX, SSE2, etc.) to accelerate baseline JPEG compression and decompression"
