#!/bin/sh

. config/options

cd $BUILD/$1*

do_install usr/bin
do_install usr/lib/libcwiid.so*
do_install usr/lib/cwiid/plugins/*.so

mkdir -p $INSTALL/etc
cp $ROOT/$PACKAGES/$1/config/wiimote $INSTALL/etc

mkdir -p $INSTALL/etc/cwiid/wminput
cp $ROOT/$PACKAGES/$1/config/enna $INSTALL/etc/cwiid/wminput
