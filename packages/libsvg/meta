PKG_NAME=libsvg
PKG_VERSION=0.1.4
PKG_URL="http://cairographics.org/snapshots/libsvg-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_DEPENDS="jpeg libpng libxml2"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="libsvg - a library for SVG files"
PKG_LONGDESC="libsvg provides a parser for SVG content in files or buffers. It does not do any rendering, but instead provides a function-based interface that can be used by various rendering engines."
