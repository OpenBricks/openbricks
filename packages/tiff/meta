PKG_NAME=tiff
PKG_VERSION=4.0.2
PKG_URL="http://download.osgeo.org/libtiff/tiff-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain jpeg zlib"
PKG_RUN_DEPENDS="$TARGET_LIBC jpeg zlib"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Tag Image File Format (TIFF) library"
PKG_LONGDESC="libtiff is a library providing support for the Tag Image File Format (TIFF), a widely used format for storing image data.  This package includes the shared library."
