#!/bin/sh

. config/options

CFG_CXX="--disable-cxx"
[ "$TOOLCHAIN_CXX" = yes ] && CFG_CXX="--enable-cxx"

CFG_XORG="--without-x"
[ "$XORG" = yes ] && CFG_XORG="--with-x"

cd $BUILD/$1*
do_configure \
            --enable-largefiles \
            --disable-mdi \
            $CFG_CXX \
            --with-jpeg-lib-dir=$LIB_PREFIX/lib \
            --with-jpeg-include-dir=$LIB_PREFIX/include \
            $CFG_XORG \

make
make_install
