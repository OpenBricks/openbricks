#!/bin/sh

. config/options
get_meta $1

CFG_CXX="--disable-cxx"
[ "$TOOLCHAIN_CXX" = yes ] && CFG_CXX="--enable-cxx"

CFG_XORG="--without-x"
[ "$XORG" = yes ] && CFG_XORG="--with-x"

cd $BUILD/${PKG_NAME}-${PKG_VERSION}

mkdir -p objdir-host
cd objdir-host
do_configure host \
            --enable-largefile \
            --disable-mdi \
            $CFG_CXX \
            --with-jpeg-lib-dir=$ROOT/$TOOLCHAIN/lib \
            --with-jpeg-include-dir=$ROOT/$TOOLCHAIN/include \
            --without-x \

make
make_install toolchain
cd ..


mkdir -p objdir-target
cd objdir-target
do_configure target \
            --enable-largefile \
            --disable-mdi \
            $CFG_CXX \
            --with-jpeg-lib-dir=$LIB_PREFIX/lib \
            --with-jpeg-include-dir=$LIB_PREFIX/include \
            $CFG_XORG \

make
make_install
