PKG_NAME=SDL-mixer
PKG_VERSION=1.2.12
PKG_URL="http://www.libsdl.org/projects/SDL_mixer/release/SDL_mixer-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC SDL"
PKG_BUILD_DEPENDS="toolchain SDL"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="mixer library for Simple DirectMedia Layer 1.2"
PKG_LONGDESC="SDL Mixer is a sample multi-channel audio mixer library. It supports 4 channels of 16 bit stereo audio, plus a single channel of music, mixed by the popular MikMod MOD, Timidity MIDI, and SMPEG MP3 libraries."
