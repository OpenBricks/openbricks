PKG_NAME=wormux
PKG_VERSION=0.9.2.1
PKG_URL="http://download.gna.org/warmux/wormux-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC SDL SDL-image SDL-mixer SDL-ttf SDL-gfx SDL-net curl libxml2"
PKG_BUILD_DEPENDS="toolchain SDL SDL-image SDL-mixer SDL-ttf SDL-gfx SDL-net curl libxml2"
PKG_USE="cxx"
PKG_PRIORITY=optional
PKG_SECTION=games
PKG_SHORTDESC="funny fight game on 2D maps"
PKG_LONGDESC="Wormux is a free game where funny animals fight on a 2D map with funny weapons. Though currently under heavy development, it is already very playable, with lots of weapons (Dynamite, Baseball Bat, Teleportation, etc.). For the moment, you can not play against computer opponents."
