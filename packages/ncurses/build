#!/bin/sh

. config/options

cd $BUILD/$1*

setup_toolchain host
mkdir -p objdir-host
cd objdir-host
../configure
make -C include
make -C progs tic
cd ..

setup_toolchain target

do_gcc_strip_lto
do_gcc_strip_gold

mkdir -p objdir-target
cd objdir-target
../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --with-build-cc=$HOST_CC \
             --with-build-cppflags="$HOST_CPPFLAGS -I../include" \
             --with-build-cflags="$HOST_CFLAGS" \
             --with-build-ldflags="$HOST_LDFLAGS" \
             --without-cxx \
             --without-cxx-binding \
             --without-ada \
             --without-progs \
             --with-shared \
             --without-normal \
             --without-debug \
             --without-profile \
             --disable-rpath \
             --enable-overwrite \
             --enable-const \
             --enable-echo \
             --disable-warnings \
             --disable-assertions \

make
make_install
sed -i "s%^prefix=.*%prefix=$LIB_PREFIX%" .install/usr/bin/ncurses5-config
