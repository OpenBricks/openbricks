PKG_NAME=ncurses
PKG_VERSION=5.7
PKG_URL="http://ftp.gnu.org/pub/gnu/ncurses/ncurses-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="terminfo"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="shared libraries for terminal handling"
PKG_LONGDESC="This package contains the shared libraries necessary to run programs compiled with ncurses."
