PKG_NAME=acl
PKG_VERSION=2.2.51
PKG_URL="http://download.savannah.gnu.org/releases/acl/acl-${PKG_VERSION}.src.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEPENDS="attr"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Access control list library"
PKG_LONGDESC=" This package contains the libacl.so dynamic library containing the POSIX 1003.1e draft standard 17 functions for manipulating access control lists."
