PKG_NAME=klibc
PKG_VERSION=1.5.25
PKG_URL="http://ftp.forthnet.gr/pub/linux/libs/klibc/1.5/klibc-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="gcc-core linux-headers"
PKG_PRIORITY=required
PKG_SECTION=system
PKG_SHORTDESC="klibc is a minimalistic subset of the standard C library"
PKG_LONGDESC="klibc was developed mainly to be used during the Linux startup process, and it is part of the early user space, i.e. components used during kernel startup, but which do not run in kernel mode."
