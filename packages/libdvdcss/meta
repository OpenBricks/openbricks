PKG_NAME=libdvdcss
PKG_VERSION=1.2.10
PKG_URL="http://download.videolan.org/pub/libdvdcss/${PKG_VERSION}/libdvdcss-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="libdvdcss is a simple library designed for accessing DVDs like a block device without having to bother about the decryption."
PKG_LONGDESC="libdvdcss is a simple library designed for accessing DVDs like a block device without having to bother about the decryption."
