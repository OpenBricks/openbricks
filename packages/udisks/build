#!/bin/sh

. config/options

cd $BUILD/$1*

do_configure --disable-man-pages \
             --disable-gtk-doc \
             --disable-gtk-doc-html \
             --disable-gtk-doc-pdf \
             --disable-lvm2 \
             --disable-dmmp \
             --disable-remote-access \
             --enable-nls \

make
make_install
mkdir -p .install/usr/lib
ln -s ../libexec .install/usr/lib/udisks
