PKG_NAME=skype-static
PKG_VERSION=2.1.0.81
PKG_URL="http://download.skype.com/linux/skype_static-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC alsa-lib libXv libXss libSM libICE libXi libXrender libXrandr freetype fontconfig libXext libX11 zlib GLib util-linux-ng expat libxcb pcre libXau libXdmcp"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="cxx"
PKG_ARCH=i386
PKG_LICENSE=non-free
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="VOIP and instant messaging client (static build)"
PKG_LONGDESC="Skype is a little piece of software that lets you make free calls to anyone else on Skype, anywhere in the world. And even though the calls are free, they are really excellent quality."
