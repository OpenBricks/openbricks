PKG_NAME=libXt
PKG_VERSION=1.1.1
PKG_URL="$XORG_SRCS/lib/libXt-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libSM libICE"
PKG_BUILD_DEPENDS="toolchain libX11 kbproto libSM libICE"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 toolkit intrinsics library"
PKG_LONGDESC="libXt provides the X Toolkit Intrinsics, an abstract widget library upon which other toolkits are based.  Xt is the basis for many toolkits, including the Athena widgets (Xaw), and LessTif (a Motif implementation)"
