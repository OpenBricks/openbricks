PKG_NAME=mex
PKG_VERSION=0.1.6
PKG_URL="http://media-explorer.github.com/releases/mex-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain intltool"
PKG_DEPENDS="GLib gdk-pixbuf rest libsoup clutter clutter-gst mx grilo dbus-glib"
PKG_USE="lirc"
PKG_DEPENDS_lirc="lirc"
PKG_REQUIRES_USE="mx:dbus"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="media centre application for Linux"
PKG_LONGDESC="Media Explorer is a media centre application for Linux (including MeeGo). It leverages existing libraries (GUPnP, Grilo, Tracker, GStreamer) to find, index and play local and remote media. The application (interface coded in Mx and Clutter) enables browsing, searching, and viewing of found media."
