PKG_NAME=libplayer
PKG_URL="GEEXBOX_SRCS/libplayer-r1475.tar.bz2"
PKG_VERSION=r1475
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
if [ "$MPLAYER" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS MPlayer"
fi
if [ "$XINE" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS xine-lib"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS xine-lib"
fi
if [ "$XORG" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11 libvdpau"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libX11 libvdpau"
fi
if [ "$GSTREAMER" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS gstreamer gst-plugins-base"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS gstreamer gst-plugins-base"
fi
if [ "$VLC" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS vlc"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS vlc"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="a multimedia A/V abstraction layer API"
PKG_LONG_DESC="libplayer provides a generic A/V API that relies on various multimedia player for Linux systems. It currently supports MPlayer and xine. Its main goal is to provide an unique API that player frontends can use to control any kind of multimedia player underneath."
