#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug=3"
else
  DEBUG_CONFIG="--disable-debug"
fi

if [ "$XORG" = yes ]; then
  XORG_CONFIG="--enable-x11 --enable-xlib-hack"
else
  XORG_CONFIG="--disable-x11"
fi

if [ "$MPLAYER" = yes ]; then
  MPLAYER_CONFIG="--enable-mplayer"
else
  MPLAYER_CONFIG="--disable-mplayer"
fi

if [ "$XINE" = yes ]; then
  XINE_CONFIG="--enable-xine"
else
  XINE_CONFIG="--disable-xine"
fi

if [ "$GSTREAMER" = yes ]; then
  GST_CONFIG="--enable-gstreamer"
else
  GST_CONFIG="--disable-gstreamer"
fi

if [ "$VLC" = yes ]; then
  VLC_CONFIG="--enable-vlc"
else
  VLC_CONFIG="--disable-vlc"
fi

cd $BUILD/$1*
./configure --prefix=/usr \
            --disable-static \
            --enable-shared \
            $MPLAYER_CONFIG \
            $XINE_CONFIG \
            $VLC_CONFIG \
            $GST_CONFIG \
            --disable-binding-python \
            --disable-optimize \
            --cross-compile \
            --disable-doc \
            --disable-logcolor \
            $DEBUG_CONFIG \
            $XORG_CONFIG

make
make_install
