PKG_NAME=perl-xml-writer
PKG_VERSION=0.612
PKG_URL="$CPAN_SRCS/J/JO/JOSEPHW/XML-Writer-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="perl"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Perl extension for writing XML documents."
PKG_LONGDESC="XML::Writer is a helper module for Perl programs that write an XML document. The module handles all escaping for attribute values and character data and constructs different types of markup, such as tags, comments, and processing instructions."
