PKG_NAME=hicolor-icon-theme
PKG_VERSION=0.12
PKG_URL="http://icon-theme.freedesktop.org/releases/hicolor-icon-theme-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="default fallback theme for FreeDesktop.org icon themes"
PKG_LONGDESC="This is the default fallback theme used by implementations of the Freedesktop.org Icon Theme specification."
