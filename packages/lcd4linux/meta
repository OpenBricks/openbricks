PKG_NAME=lcd4linux
PKG_VERSION=0.10.1-RC2
PKG_URL="$DISTRO_SRCS/lcd4linux-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_ARCH="i386 x86_64"
PKG_RUN_DEPENDS="$TARGET_LIBC libusb"
PKG_BUILD_DEPENDS="toolchain libusb"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="Grabs information and displays it on an external lcd"
PKG_LONGDESC="Small program that grabs information from the kernel and some subsystems and displays it on an external liquid crystal display."
