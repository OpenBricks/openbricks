PKG_NAME=tvheadend
PKG_VERSION=20120624-git1332f9f
PKG_URL="$DISTRO_SRCS/tvheadend-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC openssl"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="zeroconf"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="Combined DVB receiver, Digital Video Recorder and Live TV streaming server for Linux"
PKG_LONGDESC="Tvheadend is a TV streaming server for Linux supporting DVB-S, DVB-S2, DVB-C, DVB-T, ATSC, IPTV, and Analog video (V4L) as input sources. It also comes with a powerful and easy to use web interface both used for configuration and day-to-day operations, such as searching the EPG and scheduling recordings."
PKG_BUILD_DEPENDS_zeroconf="avahi"
