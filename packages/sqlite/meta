PKG_NAME=sqlite
PKG_VERSION=3.6.23.1
PKG_URL="http://www.hwaci.com/sw/sqlite/sqlite-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain tcl"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="devtools"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="SQLite shared library"
PKG_LONGDESC="SQLite is a C library that implements an SQL database engine. Programs that link with the SQLite library can have SQL database access without running a separate RDBMS process."
