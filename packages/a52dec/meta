PKG_NAME=a52dec
PKG_VERSION=0.7.4
PKG_URL="http://liba52.sourceforge.net/files/a52dec-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="library for decoding ATSC A/52 streams"
PKG_LONGDESC="liba52 is a free library for decoding ATSC A/52 streams. The A/52 standard is used in a variety of applications, including digital television and DVD. It is also known as AC-3."
