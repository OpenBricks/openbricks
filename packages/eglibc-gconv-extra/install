#!/bin/sh

. config/options

cd $BUILD/eglibc-*

if pkg_uses eglibc-gconv minimal; then
  do_install usr/lib/gconv
  for mod in ISO8859-1 ISO8859-15 UNICODE; do
    rm  $INSTALL/usr/lib/gconv/$mod.so
  done
else
  echo "eglibc-gconv does not use useflag 'minimal', all is done, remove eglibc-iconv-extra from config file !"
  exit 1
fi
