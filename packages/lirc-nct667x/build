#!/bin/sh

. config/options

LIRC_DIR=`basename $BUILD/lirc-0*`

cd $BUILD/$1*

cp -f ../$LIRC_DIR/drivers/lirc.h .
cp -f ../$LIRC_DIR/drivers/lirc_dev/lirc_dev.h .
cp -f ../$LIRC_DIR/drivers/kcompat.h .
cp -f ../$LIRC_DIR/drivers/lirc_dev/Module.symvers .
sed -i 's:drivers/lirc.h:lirc.h:' lirc_dev.h

make KSRC=$(kernel_path)
