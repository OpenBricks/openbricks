PKG_REV=1
PKG_BUILD_DEPENDS="toolchain python-distutilscross GLib-host"
PKG_DEPENDS="Python GLib"
PKG_PRIORITY=optional
PKG_SECTION=python
PKG_SHORTDESC="Base Kaa Framework for all Kaa Modules"
PKG_LONGDESC="Kaa Base provides the base Kaa framework and is an implicit dependency for all kaa modules. The kaa framework includes a mainloop facility with an API for signals and callbacks, timers, process and thread management, file descriptor monitoring (with INotify support), inter-process communication, as well as a rich, practically magical API for asynchronous programming."
