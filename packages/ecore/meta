PKG_NAME=ecore
PKG_VERSION=1.0.1
PKG_URL="http://download.enlightenment.org/releases/ecore-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="eina eet evas GLib curl gnutls"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="uclibc xorg touchscreen directfb sdl opengl"
PKG_DEPENDS_uclibc="libiconv"
PKG_DEPENDS_xorg="libX11 libXdamage libXext libXfixes libXrandr libXrender"
PKG_DEPENDS_touchscreen="tslib"
PKG_DEPENDS_directfb="DirectFB"
PKG_DEPENDS_sdl="SDL"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Core abstraction layer for enlightenment DR 0.17"
PKG_LONGDESC="This is the core event abstraction layer and X abstraction layer that makes doing selections, Xdnd, general X stuff, and event loops, timeouts and idle handlers fast, optimized, and convenient. It's a separate library so anyone can make use of the work put into Ecore to make this job easy for applications."
