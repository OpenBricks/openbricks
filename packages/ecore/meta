PKG_NAME=ecore
PKG_URL="http://download.enlightenment.org/snapshots/2010-06-07/ecore-0.9.9.49539.tar.bz2"
PKG_VERSION=0.9.9.49539
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain eina eet evas GLib curl gnutls"
PKG_RUN_DEPENDS="$TARGET_LIBC eina eet evas GLib curl gnutls"
if [ "$TARGET_LIBC" = "uClibc" ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libiconv"
fi
if [ "$XORG" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11 libXdamage libXext libXfixes libXrandr libXrender"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libX11 libXdamage libXext libXfixes libXrandr libXrender"
fi
if [ "$TOUCHSCREEN" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS tslib"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS tslib"
fi
if [ "$DIRECTFB" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS DirectFB"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS DirectFB"
fi
if [ "$SDL" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS SDL"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS SDL"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="Core abstraction layer for enlightenment DR 0.17"
PKG_LONG_DESC="This is the core event abstraction layer and X abstraction layer that makes doing selections, Xdnd, general X stuff, and event loops, timeouts and idle handlers fast, optimized, and convenient. It's a separate library so anyone can make use of the work put into Ecore to make this job easy for applications."
