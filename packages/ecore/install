#!/bin/sh

. config/options

$SCRIPTS/install curl

ECORE_LIBS="ecore ecore_evas ecore_config ecore_job ecore_ipc ecore_imf ecore_imf_evas ecore_file ecore_con ecore_fb ecore_txt"
[ "$XORG" = yes ] && ECORE_LIBS="$ECORE_LIBS ecore_x"

mkdir -p $INSTALL/usr/lib
for i in $ECORE_LIBS; do
  cp -PR $BUILD/$1*/src/lib/$i/.libs/*.so* $INSTALL/usr/lib
done
