PKG_NAME=SDL-image
PKG_VERSION=1.2.6
PKG_URL="http://www.libsdl.org/projects/SDL_image/release/SDL_image-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC SDL zlib jpeg libexif libungif libpng"
PKG_BUILD_DEPENDS="toolchain SDL zlib jpeg libexif libungif libpng"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="image loading library for Simple DirectMedia Layer 1.2"
PKG_LONGDESC="This is a simple library to load images of various formats as SDL surfaces. This library currently supports BMP, PPM, PCX, GIF, JPEG, PNG, TIFF, and XPM formats."
