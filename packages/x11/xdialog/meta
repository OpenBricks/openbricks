PKG_NAME=xdialog
PKG_VERSION=2.3.1
PKG_URL="http://xdialog.free.fr/Xdialog-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="gtk-2"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="Xdialog is designed to be a drop in replacement for the dialog or cdialog programs."
PKG_LONGDESC="Xdialog converts any terminal based program into a program with an X-windows interface. The dialogs are easier to see and use while adding even more functionalities (e.g. with the treeview, the file selector, the edit box, the range box, the help button/box)."
