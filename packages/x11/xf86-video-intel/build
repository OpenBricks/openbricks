#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

xorg_drv_configure_prepend

do_autoconf
do_configure \
		           --enable-udev \
                           --enable-dri \
                           --enable-kms-only \
                           --disable-xvmc \
                           --disable-ums-only \
                           --enable-sna \
                           --enable-uxa \
                           --disable-glamor \
                           --disable-xaa \
                           --disable-dga \
                           --disable-async-swap \
						   --disable-dri3 \
                           --with-xorg-module-dir=$XORG_PATH_MODULES



make
make_install
