#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-shared \
            --disable-static \
            --enable-vmwarectrl-client \
            --with-xorg-module-dir=$XORG_PATH_MODULES

make
make_install
