#!/bin/sh

. config/options

require_cxx $1

cd $BUILD/$1*/source

# target icu needs a prebuilt host icu to crosscompile
mkdir -p objdir-host
cd objdir-host
do_configure host
make
cd ..

do_configure target \
  --with-cross-build="`pwd`/objdir-host"

make
make_install

cd ..
rm -rf .install*
mv source/.install* .
