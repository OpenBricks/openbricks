PKG_NAME=xorg-server
PKG_VERSION=1.11.4
PKG_URL="http://xorg.freedesktop.org/archive/individual/xserver/xorg-server-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="systemd libdrm libX11 libXrandr libXfont pixman libxkbfile libpciaccess gnutls libgcrypt libdri2"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain util-macros xcmiscproto bigreqsproto videoproto compositeproto xineramaproto xf86driproto xf86dgaproto glproto dri2proto fixesproto damageproto xf86vidmodeproto recordproto resourceproto scrnsaverproto font-util libdri2 libXvMC"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="Xorg X server"
PKG_LONGDESC="The Xorg X server is an X server for several architectures and operating systems, which is derived from the XFree86 4.x series of X servers. The Xorg server supports most modern graphics hardware from most vendors, and supersedes all XFree86 X servers."
