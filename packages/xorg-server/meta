PKG_NAME=xorg-server
PKG_VERSION=1.9.0
PKG_URL="http://xorg.freedesktop.org/archive/individual/xserver/xorg-server-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC udev libX11 mesa libXrandr libXfont pixman libxkbfile libpciaccess gnutls libgcrypt"
PKG_BUILD_DEPENDS="toolchain gnutls udev libX11 xcmiscproto bigreqsproto videoproto compositeproto xineramaproto xf86driproto xf86dgaproto mesa libXrandr libXfont pixman libxkbfile libpciaccess libgcrypt"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="Xorg X server"
PKG_LONGDESC="The Xorg X server is an X server for several architectures and operating systems, which is derived from the XFree86 4.x series of X servers. The Xorg server supports most modern graphics hardware from most vendors, and supersedes all XFree86 X servers."
