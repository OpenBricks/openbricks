+{
+    TouchPointInfoPtr ti;
+
+    if (!index >= t->num_touches)
+        return FALSE;
+    ti = &t->touches[index];
+
+    ti->valuators = calloc(t->num_axes, sizeof(*ti->valuators));
+    if (!ti->valuators)
