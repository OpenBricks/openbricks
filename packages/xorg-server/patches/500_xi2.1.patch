+static void
+DropTouchSelectionsOnWindow(DeviceIntPtr dev, WindowPtr win)
+{
+    WindowPtr child;
+
+    if (wOtherInputMasks(win) &&
+        BitIsOn(wOtherInputMasks(win)->xi2mask[dev->id], XI_TouchBegin))
+    {
+        InputClientsPtr client = wOtherInputMasks(win)->inputClients;
