PKG_NAME=kaa-display
PKG_VERSION=0.1.0
PKG_URL="$SFNET_SRCS/freevo/kaa-display-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain python-distutilscross"
PKG_DEPENDS="Python GLib kaa-base libX11 libXcomposite imlib2"
PKG_RUN_DEPENDS="pygame"
PKG_PRIORITY=optional
PKG_SECTION=python
PKG_SHORTDESC="Python API providing Low level support for various displays, such as X11 or framebuffer."
PKG_LONGDESC="Low level support for various displays, such as X11 or framebuffer. Provides X11Display and X11Window classes for managing X11 windows, with optional support for Imlib2 (render Imlib2 images to X11 windows), and pygame (render Imlib2 images to pygame surfaces)."
