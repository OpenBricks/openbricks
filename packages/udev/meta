PKG_NAME=udev
PKG_VERSION=182
PKG_URL="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="GLib libusb-compat usbutils gettext libffi util-linux-ng kmod"
PKG_RUN_DEPENDS="$TARGET_LIBC pciids"
PKG_BUILD_DEPENDS="toolchain linux-headers gperf"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_PRIORITY=required
PKG_SECTION=system
PKG_SHORTDESC="/dev/ and hotplug management daemon"
PKG_LONGDESC="udev is a daemon which dynamically creates and removes device nodes from /dev/, handles hotplug events and loads drivers at boot time."
