#!/bin/sh

. config/options

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host
do_configure host \
            --disable-build-docs \
            --disable-composite \
            --disable-damage \
            --disable-dpms \
            --enable-dri2 \
            --enable-glx \
            --enable-randr \
            --disable-record \
            --enable-render \
            --disable-resource \
            --disable-screensaver \
            --disable-shape \
            --enable-shm \
            --disable-sync \
            --disable-xevie \
            --enable-xfixes \
            --enable-xfree86-dri \
            --disable-xinerama \
            --enable-xinput \
            --disable-xprint \
            --disable-selinux \
            --disable-xtest \
            --enable-xv \
            --disable-xvmc \

make
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target \
            --disable-build-docs \
            --disable-composite \
            --disable-damage \
            --disable-dpms \
            --enable-dri2 \
            --enable-glx \
            --enable-randr \
            --disable-record \
            --enable-render \
            --disable-resource \
            --disable-screensaver \
            --enable-shape \
            --enable-shm \
            --disable-sync \
            --disable-xevie \
            --enable-xfixes \
            --enable-xfree86-dri \
            --disable-xinerama \
            --enable-xinput \
            --disable-xprint \
            --disable-selinux \
            --disable-xtest \
            --enable-xv \
            --disable-xvmc
make
make_install
