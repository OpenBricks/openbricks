PKG_NAME=libXv
PKG_VERSION=1.0.7
PKG_URL="$XORG_SRCS/lib/libXv-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libXext"
PKG_BUILD_DEPENDS="toolchain libX11 libXext videoproto xextproto"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 Video extension library"
PKG_LONGDESC="libXv provides an X Window System client interface to the XVideo extension to the X protocol. The XVideo extension allows for accelerated drawing of videos.  Hardware adaptors are exposed to clients, which may draw in a number of colourspaces, including YUV."
