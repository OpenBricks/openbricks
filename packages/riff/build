#!/bin/sh

. config/options

cd $BUILD/$1*

RIFF_ARCH=""
[ "$HOST_ARCH" = x86_64 ] && RIFF_ARCH="_x64"

rm -rf .install
mkdir -p .install/usr/bin .install/usr/lib
cp -P usr/bin/riff .install/usr/bin
cp -P usr/lib/libcdal.so .install/usr/lib
cp -P usr/lib/liblcdriver${RIFF_ARCH}.so .install/usr/lib/liblcdriver.so
cp -P usr/lib/liblcm${RIFF_ARCH}.so.1 .install/usr/lib/liblcm.so.1
chmod +x .install/usr/lib/*.so*
