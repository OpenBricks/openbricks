#!/bin/sh

. config/options

cd $BUILD/$1*

mkdir -p $INSTALL/etc/eventlircd.d
mkdir -p $INSTALL/lib/udev/rules.d
mkdir -p $INSTALL/etc

do_install etc
do_install lib
do_install usr/sbin

cp $ROOT/$PACKAGES/$1/config/eventlircd.conf $INSTALL/etc
cp $ROOT/$PACKAGES/$1/config/evmap/* $INSTALL/etc/eventlircd.d
