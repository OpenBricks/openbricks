PKG_NAME=libpurple
PKG_VERSION=2.7.3
PKG_URL="$SFNET_SRCS/pidgin/Pidgin/pidgin-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC sqlite libxml2 farsight dbus dbus-glib gnutls"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="multi-protocol instant messaging library"
PKG_LONGDESC="libpurple is a library intended to be used by programmers seeking to write an IM client that connects to many IM networks. Currently supported are: AIM/ICQ, Yahoo!, MSN, IRC, Jabber/XMPP, Napster, Zephyr, Gadu-Gadu, Bonjour, Groupwise, Sametime, SILC, SIMPLE, QQ, and MySpaceIM."
