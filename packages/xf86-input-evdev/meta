PKG_NAME=xf86-input-evdev
PKG_VERSION=2.7.0
PKG_URL="http://xorg.freedesktop.org/archive/individual/driver/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xorg-server"
PKG_RUN_DEPENDS="$TARGET_LIBC xorg-server"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X.Org X server -- evdev input driver"
PKG_LONGDESC="This package provides the driver for input devices using evdev, the Linux kernel's event delivery mechanism. This driver allows for multiple keyboards and mice to be treated as separate input devices."
