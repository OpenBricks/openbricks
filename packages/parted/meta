PKG_NAME=parted
PKG_VERSION=3.1
PKG_URL="http://ftp.gnu.org/gnu/parted/parted-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC ncurses util-linux-ng LVM"
PKG_BUILD_DEPENDS="toolchain ncurses util-linux-ng LVM"
PKG_PRIORITY=optional
PKG_SECTION=filesystem
PKG_SHORTDESC="The GNU Parted disk partitioning library"
PKG_LONGDESC="GNU Parted is a program that allows you to create, destroy, resize, move and copy hard disk partitions. This is useful for creating space for new operating systems, reorganising disk usage, and copying data to new hard disks."
