PKG_NAME=xcb-utils
PKG_VERSION=0.3.8
PKG_URL="http://xcb.freedesktop.org/dist/xcb-util-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libxcb"
PKG_BUILD_DEPENDS="toolchain libpthread-stubs xcb-proto libxcb"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="utility libraries for X C Binding"
PKG_LONGDESC="This package contains the library files needed to run software using libxcb utils"
