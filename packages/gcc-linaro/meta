PKG_NAME=gcc-linaro
case "$TOOLCHAIN_FLAVOR" in
  next)
    PKG_VERSION=4.8-2014.03
    PKG_URL="http://launchpad.net/gcc-linaro/4.8/${PKG_VERSION}/+download/gcc-linaro-${PKG_VERSION}.tar.xz"
    GCC_VERSION=4.8.3
    ;;
  *)
    PKG_VERSION=4.7-2013.10
    PKG_URL="https://launchpad.net/gcc-linaro/4.7/${PKG_VERSION}/+download/gcc-linaro-${PKG_VERSION}.tar.bz2"
    GCC_VERSION=4.7.4
esac
