PKG_NAME=libdvdread
PKG_VERSION=4.1.3
PKG_URL="http://www1.mplayerhq.hu/MPlayer/releases/dvdnav-old/libdvdread-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="dvdcss"
PKG_DEPENDS_dvdcss="libdvdcss"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="library for reading DVDs"
PKG_LONGDESC="libdvdread provides the functionality that is required to access many DVDs. It parses IFO files, reads NAV-blocks, and performs CSS authentication and descrambling."
