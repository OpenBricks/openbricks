PKG_NAME=dcraw
PKG_VERSION=9.05
PKG_URL="http://www.cybercom.net/~dcoffin/dcraw/archive/dcraw-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="jpeg lcms"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="decode raw digital camera images"
PKG_LONGDESC="This utility converts the native (RAW), format of various digital cameras into netpbm portable pixmap (.ppm) image.  Supports the following models: Canon, Kodak, Olympus, Nikon, Fuji, Minolta and Sigma."
