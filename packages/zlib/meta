PKG_NAME=zlib
PKG_VERSION=1.2.7
PKG_URL="http://zlib.net/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=essential
PKG_SECTION=libs
PKG_SHORTDESC="compression library"
PKG_LONGDESC="zlib is a library implementing the deflate compression method found in gzip and PKZIP."
