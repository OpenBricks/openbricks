#!/bin/sh

. config/options

cd $BUILD/$1*

cmake \
  -DCMAKE_FIND_ROOT_PATH=$LIB_PREFIX \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DENABLE_STATIC=OFF \
  -DENABLE_DEBUG=OFF \
  -DWITH_DOXYGEN=OFF \
  -DWITH_MPI=OFF \
  -DWITH_XSLTPROC=OFF \
  .

make
make_install
mv .install/usr/include/boost-*/boost .install/usr/include
mv .install/usr/lib/boost-*/* .install/usr/lib
