PKG_NAME=SDL-ttf
PKG_VERSION=2.0.9
PKG_URL="http://www.libsdl.org/projects/SDL_ttf/release/SDL_ttf-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC SDL freetype"
PKG_BUILD_DEPENDS="toolchain SDL freetype"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="ttf library for Simple DirectMedia Layer with FreeType 2 support"
PKG_LONGDESC="SDL_ttf is a sample TrueType font library. It allows you to use TrueType fonts in SDL applications."
