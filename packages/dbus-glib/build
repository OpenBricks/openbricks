#!/bin/sh

. config/options

export ac_cv_have_abstract_sockets=yes
export ac_cv_func_posix_getpwnam_r=yes
export have_abstract_sockets=yes

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host
do_configure host \
            --disable-tests \
            --disable-gtk-doc \
            --disable-doxygen-docs \
            --enable-asserts=no \

make
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target \
            --disable-tests \
            --disable-gtk-doc \
            --disable-doxygen-docs \
            --enable-asserts=no \

make
make_install
