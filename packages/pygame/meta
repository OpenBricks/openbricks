PKG_NAME=pygame
PKG_VERSION=1.9.1
PKG_URL="http://www.pygame.org/ftp/pygame-${PKG_VERSION}release.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain python-distutilscross"
PKG_DEPENDS="Python SDL SDL-image SDL-mixer SDL-ttf jpeg libpng smpeg"
PKG_PRIORITY=optional
PKG_SECTION=python
PKG_SHORTDESC="set of Python modules designed for writing video games"
PKG_LONGDESC="Pygame is a set of Python modules designed for writing video games. Pygame adds functionality on top of the excellent SDL library. This allows you to create fully featured games and multimedia programs in the python language. Pygame is highly portable and runs on nearly every platform and operating system. Pygame itself has been downloaded millions of times."
