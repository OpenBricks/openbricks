PKG_NAME=mesa-demos
PKG_VERSION=8.0.1
PKG_URL="ftp://ftp.freedesktop.org/pub/mesa/demos/$PKG_VERSION/$PKG_NAME-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC mesa"
PKG_BUILD_DEPENDS="toolchain glew"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="Miscellaneous Mesa GL utilities"
PKG_LONGDESC="This package provides several basic GL utilities built by Mesa, including glxinfo and glxgears."
