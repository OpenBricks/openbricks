#!/bin/sh

. config/options

if pkg_uses $1 openmax; then
  CFG_OPENMAX="--enable-omxil"
else
  CFG_OPENMAX="--disable-omxil"
fi

if [ "$PLATFORM_OMAP" = yes ]; then
  CFG_OMAP="--enable-omapfb"
else
  CFG_OMAP="--disable-omapfb"
fi

if pkg_uses $1 directfb; then
  CFG_DFB="--enable-directfb"
else
  CFG_DFB="--disable-directfb"
fi

if [ "$CONSOLE" = yes ]; then
  CFG_FB="--enable-fb"
else
  CFG_FB="--disable-fb"
fi

if pkg_uses $1 live; then
  CFG_LIVE="--enable-live555 --with-live555-tree=$LIB_PREFIX/live"
else
  CFG_LIVE="--disable-live555"
fi

if pkg_uses $1 pulseaudio; then
  CFG_PULSE="--enable-pulse"
else
  CFG_PULSE="--disable-pulse"
fi

if pkg_uses $1 sdl; then
  CFG_SDL="--enable-sdl --enable-sdl-image"
else
  CFG_SDL="--disable-sdl --disable-sdl-image"
fi

if pkg_uses $1 xorg; then
  CFG_X="--with-x --enable-xcb --enable-xvideo --enable-glx --enable-opengl"
else
  CFG_X="--without-x --disable-xcb --disable-xvideo --disable-glx --disable-opengl"
fi

if pkg_uses $1 devtools; then
  CFG_DEVTOOLS="--enable-vlc"
else
  CFG_DEVTOOLS="--disable-vlc"
fi

if pkg_uses $1 vaapi; then
  CFG_VAAPI="--enable-libva"
else
  CFG_VAAPI="--disable-libva"
fi

if pkg_uses $1 dvd; then
  CFG_DVD="--enable-dvdread --enable-dvdnav"
else
  CFG_DVD="--disable-dvdread --disable-dvdnav"
fi

if pkg_uses $1 dvb; then
  CFG_DVB="--enable-dvb --enable-dvbpsi"
else
  CFG_DVB="--disable-dvb --disable-dvbpsi"
fi

if pkg_uses $1 v4l; then
  CFG_DVB="--enable-v4l --enable-v4l2"
else
  CFG_DVB="--disable-v4l --disable-v4l2"
fi

if pkg_uses $1 crystalhd; then
  export enable_crystalhd=set
  CFG_CRYSTALHD="--enable-crystalhd"
else
  CFG_CRYSTALHD="--disable-crystalhd"
fi

cd $BUILD/$1*
do_configure \
            --enable-silent-rules \
            --disable-dependency-tracking \
            --without-contrib \
            --disable-nls \
            --disable-rpath \
            --enable-dbus \
            --disable-telepathy \
            --disable-gprof \
            --disable-cprof \
            --disable-debug \
            --enable-run-as-root \
            --disable-coverage \
            --enable-sout \
            --disable-lua \
            --disable-httpd \
            --disable-libproxy \
            --disable-vlm \
            --disable-growl \
            --disable-notify \
            --disable-taglib \
            $CFG_LIVE \
            --disable-dc1394 \
            --disable-dv \
            $CFG_DVD \
            --disable-opencv \
            --disable-smb \
            --disable-sftp \
            $CFG_V4L \
            $CFG_CRYSTALHD \
            --disable-pvr \
            --disable-gnomevfs \
            --disable-vcdx \
            --enable-vcd \
            --enable-libcddb \
            $CFG_DVB \
            --enable-screen \
            --enable-ogg \
            --enable-mux_ogg \
            --enable-shout\
            --disable-mkv \
            --disable-mod \
            --enable-mpc \
            --disable-gme \
            --enable-wma-fixed \
            --disable-shine \
            $CFG_OPENMAX \
            --enable-mad \
            --disable-id3tag \
            --disable-merge-ffmpeg \
            --enable-avcodec \
            --disable-switcher \
            --enable-avformat \
            --enable-swscale \
            --enable-postproc \
            --enable-faad \
            --disable-twolame \
            --disable-quicktime \
            --enable-real \
            --enable-realrtsp \
            --disable-libtar \
            --disable-a52 \
            --disable-dca \
            --disable-flac \
            --disable-libmpeg2 \
            --enable-vorbis \
            --disable-tremor \
            --disable-speex \
            --enable-theora \
            --disable-dirac \
            --disable-schroedinger \
            --enable-png \
            --disable-x264 \
            --disable-fluidsynth \
            --enable-zvbi \
            --disable-telx \
            --enable-libass \
            --disable-asademux \
            --disable-kate \
            --disable-tiger \
            $CFG_VAAPI \
            $CFG_X \
            $CFG_SDL \
            --enable-freetype \
            --disable-fribidi \
            --enable-fontconfig \
            --enable-libxml2 \
            --disable-svg \
            --enable-snapshot \
            --disable-hd1000v \
            --disable-directx \
            --disable-wingdi \
            $CFG_FB \
            $CFG_OMAP \
            --disable-svgalib \
            $CFG_DFB \
            --disable-ggi \
            --disable-aa \
            --disable-caca \
            --disable-oss \
            $CFG_PULSE \
            --disable-portaudio \
            --enable-alsa \
            --disable-waveout \
            --disable-macosx-audio \
            --disable-hd1000a \
            --disable-jack \
            --disable-cyberlink \
            --disable-upnp \
            --disable-skins2 \
            --disable-hildon \
            --disable-qt4 \
            --disable-macosx \
            --disable-macosx-vout \
            --disable-macosx-dialog-provider \
            --disable-macosx-qtcapture \
            --disable-macosx-eyetv \
            --disable-macosx-vlc-app \
            --disable-ncurses \
            --disable-xosd \
            --disable-fbosd \
            --disable-visual \
            --disable-goom \
            --disable-projectm \
            --disable-atmo \
            --disable-bonjour \
            --enable-udev \
            --disable-mtp \
            --disable-lirc \
            --enable-libgcrypt \
            --enable-gnutls \
            --disable-remoteosd \
            --disable-osso_screensaver \
            --disable-update-check \
            --enable-sqlite \
            --disable-loader \
            $CFG_DEVTOOLS \
            --disable-activex \
            --disable-mozilla \

make
make_install
