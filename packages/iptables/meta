PKG_NAME=iptables
PKG_VERSION=1.4.12.1
PKG_URL="http://ftp.netfilter.org/pub/iptables/iptables-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain libnfnetlink"
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="administration tools for packet filtering and NAT"
PKG_LONGDESC="These are the user-space administration tools for the Linux kernel's netfilter and iptables. netfilter and iptables provide a framework for stateful and stateless packet filtering, network and port address translation, and other IP packet manipulation."
