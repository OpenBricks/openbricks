PKG_NAME=efibootmgr
PKG_VERSION=0.5.4
PKG_URL="http://linux.dell.com/efibootmgr/efibootmgr-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_ARCH="i386 x86_64"
PKG_RUN_DEPENDS="$TARGET_LIBC pciutils"
PKG_BUILD_DEPENDS="toolchain pciutils"
PKG_PRIORITY=optional
PKG_SECTION=admin
PKG_SHORTDESC="EFI Boot Manager"
PKG_LONGDESC="This is efibootmgr, a Linux user-space application to modify the Intel Extensible Firmware Interface (EFI) Boot Manager. This application can create and destroy boot entries, change the boot order, change the next running boot option, and more."
