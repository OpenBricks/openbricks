PKG_NAME=gst-ducati
PKG_VERSION=1.5.3.2
PKG_URL="https://launchpad.net/~tiomap-dev/+archive/release/+files/gst-plugin-ducati_${PKG_VERSION}.orig.tar.gz"
PKG_REV=1
PKG_DEPENDS="GLib gstreamer gst-plugins-base tiler libdce"
PKG_RUN_DEPENDS="$TARGET_LIBC gst-plugin-h264"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="Gstreamer TI Ducati IVA-HD decoder plugin"
PKG_LONGDESC="gst-ducati is a Gstreamer plugin supporting TI IVA-HD hardware accelerated decoding in TI OMAP4 processors."
