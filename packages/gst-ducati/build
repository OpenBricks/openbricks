#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug --disable-valgrind --disable-profiling --disable-gcov"
fi

cd $BUILD/$1*
do_autoconf
do_configure \
  --disable-nls \
  --disable-rpath \
  $DEBUG_CONFIG \

make ERROR_CFLAGS="-Wall -Wdeclaration-after-statement -Wvla -Wpointer-arith"
make_install
