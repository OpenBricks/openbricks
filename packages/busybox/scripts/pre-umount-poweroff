#!/bin/sh

if grep -q external-persistent /proc/cmdline; then
  for d in bin boot etc firmware lib sbin sys usr var ; do 
    cp -R /.data/$d /persistent/
  done
fi

while read i ; do 
  umount `echo $i | cut -d" " -f1`
done < /var/mnts 

while read i ; do 
  a=`echo $i | grep "/mnt/shares/"| cut -d" " -f2`
  [ -n "$a" ] && umount $a 
done < /proc/mounts

systemctl poweroff
