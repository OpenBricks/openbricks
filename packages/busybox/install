#!/bin/sh

. config/options

mkdir -p $INSTALL/bin
mkdir -p $INSTALL/usr/share/udhcpc

cp $BUILD/$1*/$1 $INSTALL/bin
ln -s busybox $INSTALL/bin/sh
cp $PACKAGES/$1/scripts/udhcp.script $INSTALL/usr/share/udhcpc/default.script

mkdir -p $INSTALL/etc
cp $PACKAGES/$1/config/passwd $INSTALL/etc
cp $PACKAGES/$1/config/group $INSTALL/etc
cp $PACKAGES/$1/config/profile $INSTALL/etc
cp $PACKAGES/$1/config/funcs $INSTALL/etc
cp  $PACKAGES/$1/config/*_ext $INSTALL/etc

# runit specific
mkdir -p $INSTALL/sbin
mkdir -p $INSTALL/etc/service
cp $PACKAGES/$1/scripts/runsvdir-start $INSTALL/sbin

# acpid specific
mkdir -p $INSTALL/etc/acpi/PWRF
cp $PACKAGES/$1/scripts/acpi_powerbtn $INSTALL/etc/acpi/PWRF/00000080
