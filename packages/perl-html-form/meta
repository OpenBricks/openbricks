PKG_NAME=perl-html-form
PKG_VERSION=6.00
PKG_URL="$CPAN_SRCS/G/GA/GAAS/HTML-Form-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="perl perl-html-tokeparser perl-uri perl-http-message"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Class that represents an HTML form element"
PKG_LONGDESC="Objects of the HTML::Form class represents a single HTML <form> ... </form> instance. A form consists of a sequence of inputs that usually have names, and which can take on various values. The state of a form can be tweaked and it can then be asked to provide HTTP::Request objects that can be passed to the request() method of LWP::UserAgent."
