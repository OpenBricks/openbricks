PKG_NAME=xrandr
PKG_VERSION=1.3.5
PKG_URL="$XORG_SRCS/app/xrandr-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libXrandr"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libXrandr"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="primitive command line interface to RandR extension"
PKG_LONGDESC="Xrandr  is  used  to set the size, orientation and/or reflection of the outputs for a screen. It can also set the screen size."
