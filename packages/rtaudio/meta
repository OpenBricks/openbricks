PKG_NAME=rtaudio
PKG_VERSION=4.0.10
PKG_URL="http://www.music.mcgill.ca/~gary/rtaudio/release/rtaudio-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_USE="alsa pulseaudio"
PKG_DEPENDS_pulseaudio="pulseaudio"
PKG_DEPENDS_alsa="alsa-lib"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=sound
PKG_SHORTDESC="C++ API for realtime audio I/O"
PKG_LONGDESC="RtAudio is a set of C++ classes that provide a common API (Application Programming Interface) for realtime audio input/output across Linux, Macintosh OS-X and Windows (DirectSound and ASIO) operating systems. RtAudio significantly simplifies the process of interacting with computer audio hardware."
