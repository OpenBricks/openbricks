PKG_NAME=GStreamer
PKG_VERSION=0.10
PKG_REV=1
PKG_RUN_DEPENDS="gstreamer gst-plugins-base gst-plugins-good gst-ffmpeg gst-vaapi"
[ "$XORG" = yes ] && PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS gst-plugins-gl"
[ "$TARGET_ARCH" = arm ] && \
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS gst-dsp gst-omapfb"
[ "$OPENMAX" = yes ] && PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS gst-openmax"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GStreamer metapackage"
PKG_LONGDESC="These package depends on the standard GStreamer components. GStreamer is a streaming media framework."
