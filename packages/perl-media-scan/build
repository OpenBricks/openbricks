#!/bin/sh

. config/options
get_meta $1

cd $BUILD/libmediascan-*/bindings/perl


sed -i 's/^my @check = qw(\/usr\/include \/usr\/local\/include \/opt\/local\/include);$/my @check;/' Makefile.PL


do_perl_make --with-lms-includes=$LIB_PREFIX/include --with-lms-libs=$LIB_PREFIX/lib --with-exif-includes=$LIB_PREFIX/include --with-exif-libs=$LIB_PREFIX/lib --with-jpeg-includes=$LIB_PREFIX/include --with-jpeg-libs=$LIB_PREFIX/lib --with-png-includes=$LIB_PREFIX/include --with-png-libs=$LIB_PREFIX/lib --with-gif-includes=$LIB_PREFIX/include --with-gif-libs=$LIB_PREFIX/lib --with-bdb-includes=$LIB_PREFIX/include --with-bdb-libs=$LIB_PREFIX/lib --with-ffmpeg-includes=$LIB_PREFIX/include --with-ffmpeg-libs=$LIB_PREFIX/lib


make
make_install
do_perl_strip
