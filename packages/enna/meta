PKG_NAME=enna
PKG_VERSION=r3768
PKG_URL="$DISTRO_SRCS/enna-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEPENDS="freetype ecore eet eina evas edje embryo elementary curl libxml2 libplayer libvalhalla gettext"

PKG_USE="uclibc bookstore configuration games music photo tv video weather lirc cdda dvd netstream podcast shoutcast upnp mediadb xorg lightweight"
PKG_DEPENDS_uclibc="gettext"
PKG_USE_DESC_bookstore="Enable BookStore activity"
PKG_USE_DESC_configuration="Enable Configuration activity"
PKG_USE_DESC_games="Enable games activity"
PKG_USE_HELP_games="Enables the games activity."
PKG_USE_DESC_music="Enable Music activity"
PKG_USE_DEFAULT_music=yes
PKG_USE_DESC_photo="Enable Photo activity"
PKG_USE_DESC_tv="Enable TV activity"
PKG_USE_HELP_tv="Enables the TV activity, which uses a local or remote VDR to watch DVB channels."
PKG_USE_DESC_video="Enable Video activity"
PKG_USE_DEFAULT_video=yes
PKG_USE_DESC_weather="Enable Weather activity"
PKG_USE_DESC_cdda="Enable CD browser"
PKG_USE_DESC_dvd="Enable DVD browser"
PKG_USE_DESC_netstream="Enable Network Streams browser"
PKG_USE_DESC_podcast="Enable Podcast browser"
PKG_USE_DESC_shoutcast="Enable SHOUTcast browser"
PKG_USE_DESC_upnp="Enable UPnP A/V and DLNA browser"
PKG_USE_DESC_mediadb="Enable Media Database browser"
PKG_USE_DEFAULT_mediadb=yes
PKG_USE_DESC_lightweight="Configure Enna to be as lightweight as possible"
PKG_USE_HELP_lightweight="Configure Enna to be as lightweight as possible, getting rid of many background features such as metadata grabbing. It is recommended use on embedded devices using SD/NAND flash-based disks where I/O kill CPU."
PKG_DEPENDS_tv="libsvdrp"
PKG_DEPENDS_lirc="lirc"
PKG_DEPENDS_cdda="libcddb"
PKG_DEPENDS_upnp="gupnp-av"
PKG_DEPENDS_mediadb="libvalhalla"
PKG_DEPENDS_xorg="libXrandr"

PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="a powerful MediaCenter application based on EFL"
PKG_LONGDESC="Enna is a Media Center application. Featuring a simple user interface, Enna allows the user to browse and play music and video files, browse pictures and play photo slideshows, build a database of the available media retrieve information from the Internet (such as covers, fan art, song lyrics, and much more). Enna is based on the powerful Enlightenment Foundations Libraries (EFL) for its graphical user interface and GeeXboX libraries for multimedia playback and information retrieval."
