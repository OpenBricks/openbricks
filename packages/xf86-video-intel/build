#!/bin/sh

. config/options

cd $BUILD/$1*
xorg_drv_configure_prepend

do_configure \
            --enable-dri \
            --enable-kms-only \
            --disable-xvmc \
            --enable-sna \
            --disable-glamor \
            --disable-debug \
            --with-xorg-module-dir=$XORG_PATH_MODULES
make
make_install
