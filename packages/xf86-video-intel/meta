PKG_NAME=xf86-video-intel
PKG_VERSION=2.15.0
PKG_URL="http://xorg.freedesktop.org/archive/individual/driver/xf86-video-intel-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_ARCH="i386 x86_64"
PKG_BUILD_DEPENDS="toolchain xorg-server libXvMC libdrm libpciaccess"
PKG_RUN_DEPENDS="$TARGET_LIBC xorg-server libXvMC libdrm libpciaccess"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X.Org X server -- Intel i8xx, i9xx display driver"
PKG_LONGDESC="This package provides the driver for the Intel i8xx and i9xx family of chipsets, including i810, i815, i830, i845, i855, i865, i915, i945 and i965 series chips. This package also provides XvMC (XVideo Motion Compensation) drivers for i810/i815 and i9xx and newer chipsets."
