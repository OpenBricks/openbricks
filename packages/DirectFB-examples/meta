PKG_NAME=DirectFB-examples
PKG_VERSION=1.2.0
PKG_URL="http://directfb.org/downloads/Extras/DirectFB-examples-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="DirectFB"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="DirectFB examples"
PKG_LONGDESC="DirectFB is a graphics library which was designed with embedded systems in mind. It offers maximum hardware accelerated performance at a minimum of resource usage and overhead. This packages adds multiple binary examples."
