#!/bin/sh

. config/options

CFG_CXX="--disable-cxx"
[ "$TOOLCHAIN_CXX" = yes ] && CFG_CXX="--enable-cxx"

cd $BUILD/$1*
do_configure \
            --disable-nls \
            $CFG_CXX \
            --disable-guile \
            --with-included-opencdk \
            --with-included-libtasn1 \
            --with-included-lzo \
            --with-included-libcfg \
            --without-libreadline-prefix \
            --with-libgcrypt-prefix=$LIB_PREFIX \

make
make_install
