PKG_NAME=gnutls
PKG_VERSION=3.0.21
PKG_URL="http://ftp.gnu.org/gnu/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="zlib cryptodev nettle"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="The GNU TLS library - runtime library"
PKG_LONGDESC="gnutls is a portable library which implements the Transport Layer Security (TLS) 1.0 and Secure Sockets Layer (SSL) 3.0 protocols."
