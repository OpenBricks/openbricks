PKG_NAME=gnutls
PKG_VERSION=2.10.1
PKG_URL="ftp://ftp.gnutls.org/pub/gnutls/gnutls-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain zlib libgcrypt cryptodev"
PKG_RUN_DEPENDS="$TARGET_LIBC zlib libgcrypt cryptodev"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="the GNU TLS library - runtime library"
PKG_LONGDESC="gnutls is a portable library which implements the Transport Layer Security (TLS) 1.0 and Secure Sockets Layer (SSL) 3.0 protocols."
