PKG_NAME=xine-lib
PKG_URL="GEEXBOX_SRCS/xine-lib-1.2-r11400.tar.bz2"
PKG_VERSION=1.2-r11400
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain zlib ffmpeg freetype alsa-lib"
PKG_RUN_DEPENDS="$TARGET_LIBC zlib ffmpeg freetype alsa-lib"
if [ "$TARGET_LIBC" = "uClibc" ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libiconv"
fi
if [ "$VDPAU" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libvdpau"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libvdpau"
fi
if [ "$XORG" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11 libXext libXv mesa"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libX11 libXext libXv mesa"
fi
if [ "$SDL" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS SDL"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS SDL"
fi
if [ "$VDR" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS vdr"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS vdr"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="the xine video/media player library"
PKG_LONG_DESC="This is the xine media player library (libxine). Libxine provides the complete infrastructure for a video/media player. It supports MPEG 1/2 and some AVI and Quicktime videos out of the box, so you can use it to play DVDs, (S)VCDs and most video files out there. It supports network streams, subtitles and even MP3 or Ogg files. It's extensible to your heart's content via plugins for audio and video output, input media, demuxers (stream types), audio/video and subtitle codecs."
