PKG_NAME=pango
PKG_VERSION=1.28.1
PKG_URL="http://ftp.gnome.org/pub/GNOME/sources/pango/1.28/pango-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="cairo freetype fontconfig GLib zlib"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="xorg devtools"
PKG_DEPENDS_xorg="libX11 libXrender libXft"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Layout and rendering of internationalized text"
PKG_LONGDESC="Pango is a library for layout and rendering of text, with an emphasis on internationalization. Pango can be used anywhere that text layout is needed. however, most of the work on Pango-1.0 was done using the GTK+ widget toolkit as a test platform. Pango forms the core of text and font handling for GTK+-2.0."
