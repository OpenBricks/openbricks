PKG_NAME=host-perl-http-cache-transparent
PKG_VERSION=1.0
PKG_URL="$CPAN_SRCS/M/MA/MATTIASH/HTTP-Cache-Transparent-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="host-perl host-libwww-perl"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="HTTP::Cache::Transparent - Cache the result of http get-requests persistently."
PKG_LONGDESC="An implementation of http get that keeps a local cache of fetched pages to avoid fetching the same data from the server if it hasn't been updated. The cache is stored on disk and is thus persistent between invocations."
