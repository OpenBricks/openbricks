#!/bin/sh

. config/options

cd $BUILD/$1*

if pkg_uses $1 alsa; then
	ALSA=--enable-alsa
else
	ALSA=--disable-alsa
fi

if pkg_uses $1 pulseaudio; then
	PULSE=--enable-pulseaudio
else
	PULSE=--disable-pulseaudio
fi

do_configure \
	--disable-x11 \
	--disable-xv \
	--disable-oss \
	--enable-external-ortp \
	--disable-tests \
	$ALSA \
	$PULSE \

make
make_install
