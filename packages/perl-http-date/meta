PKG_NAME=perl-http-date
PKG_VERSION=6.00
PKG_URL="$CPAN_SRCS/G/GA/GAAS/HTTP-Date-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="HTTP::Date - date conversion routines"
PKG_LONGDESC="This module provides functions that deal the date formats used by the HTTP protocol (and then some more). Only the first two functions, time2str() and str2time(), are exported by default."
