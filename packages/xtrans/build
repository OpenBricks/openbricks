#!/bin/sh

. config/options

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host
do_configure host
make
sed -i "s%^prefix=.*%prefix=$ROOT/$TOOLCHAIN%" xtrans.pc
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target
make
sed -i "s%^prefix=.*%prefix=$LIB_PREFIX%" xtrans.pc
make_install
