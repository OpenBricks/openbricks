#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-static
echo "" > test/Makefile.am
make
make install
cp $LIB_PREFIX/lib/pkgconfig/pixman-1.pc $LIB_PREFIX/lib/pkgconfig/pixman.pc
cp -rf $LIB_PREFIX/include/pixman-1 $LIB_PREFIX/include/pixman
