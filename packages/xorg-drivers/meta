PKG_NAME=xorg-drivers
PKG_VERSION=2.0
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="xf86-input-evdev xf86-input-synaptics"
[ "$XORG_DRIVERS" = all ] && \
  XORG_DRIVERS="`ls -d $ROOT/$PACKAGES/xf86-video-* | sed s/.*xf86-video-//`"
for drv in $XORG_DRIVERS; do
  [ "$drv" = nvidia -a "$NVIDIA" != yes ] && continue
  [ "$drv" = omapfb -a "$TARGET_ARCH" != arm ] && continue
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS xf86-video-$drv"
done
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORT_DESC="the X.Org X server -- output driver metapackage"
PKG_LONG_DESC="This package depends on the full suite of output drivers for the X.Org X server (Xorg). It does not provide any drivers itself."
