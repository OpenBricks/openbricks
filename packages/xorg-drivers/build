#!/bin/sh

. config/options

$SCRIPTS/build xf86-input-mouse
$SCRIPTS/build xf86-input-keyboard

if [ "$TARGET_PLATFORM" = easygate ]; then
  $SCRIPTS/build xf86-video-intel
else
  $SCRIPTS/build xf86-video-ati
  $SCRIPTS/build xf86-video-glint
  $SCRIPTS/build xf86-video-i740
  $SCRIPTS/build xf86-video-intel
  $SCRIPTS/build xf86-video-mga
  $SCRIPTS/build xf86-video-nouveau
  $SCRIPTS/build xf86-video-nv
  $SCRIPTS/build xf86-video-radeonhd
  $SCRIPTS/build xf86-video-s3
  $SCRIPTS/build xf86-video-s3virge
  $SCRIPTS/build xf86-video-savage
  $SCRIPTS/build xf86-video-sis
  $SCRIPTS/build xf86-video-tdfx
  $SCRIPTS/build xf86-video-vesa
  $SCRIPTS/build xf86-video-via
  $SCRIPTS/build xf86-video-vmware
fi
