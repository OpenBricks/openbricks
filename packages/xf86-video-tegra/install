#!/bin/sh

. config/options

require_glibc $1

cd $BUILD/tegra-drivers-*/nv_tegra

do_install usr/lib/xorg/modules/drivers/tegra_drv.so

mkdir -p $INSTALL/usr/lib/xorg/gpu
cp -P $ROOT/$PACKAGES/$1/scripts/gpu $INSTALL/usr/lib/xorg/gpu/tegra.sh

mkdir -p $INSTALL/etc/X11/gpu
cp -P $ROOT/$PACKAGES/$1/config/90-tegra.conf $INSTALL/etc/X11/gpu
