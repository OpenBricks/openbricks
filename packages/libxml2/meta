PKG_NAME=libxml2
PKG_VERSION=2.7.8
PKG_URL="ftp://xmlsoft.org/libxml2/libxml2-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GNOME XML library"
PKG_LONGDESC="XML is a metalanguage to let you design your own markup language. A regular markup language defines a way to describe information in a certain class of documents (eg HTML). XML lets you define your own customized markup languages for many classes of document. It can do this because it's written in SGML, the international standard metalanguage for markup languages. This package provides a library providing an extensive API to handle such XML data files."
