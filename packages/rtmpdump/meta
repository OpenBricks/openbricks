PKG_NAME=rtmpdump
PKG_URL_PROTO=git
PKG_URL_REV=7340f6dbc
PKG_URL="git://git.ffmpeg.org/rtmpdump"
PKG_VERSION=2.4+git${PKG_URL_REV}
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEPENDS="openssl zlib"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="rtmpdump: a toolkit for RTMP streams."
PKG_LONGDESC="rtmpdump is a toolkit for RTMP streams. All forms of RTMP are supported, including rtmp://, rtmpt://, rtmpe://, rtmpte://, and rtmps://."
