PKG_NAME=libav
PKG_VERSION=0.8_beta1
PKG_URL="http://libav.org/releases/libav-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="zlib bzip2"
PKG_BUILD_DEPENDS="toolchain yasm"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_USE="vdpau vaapi"
PKG_DEPENDS_vdpau="libvdpau"
PKG_DEPENDS_vaapi="libva"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="audio and video library"
PKG_LONGDESC="libav is a complete, cross-platform solution to record, convert and stream audio and video. It includes libavcodec - the leading audio/video codec library."
