#!/bin/sh

. config/options

get_meta $1

if pkg_uses $1 xdialog; then
    CFG_XDIALOG=""
else
    CFG_XDIALOG="--disable-Xdialog"
fi

cd $PKG_BUILD_DIR
export NCURSES_CONFIG="$ROOT/$TOOLCHAIN/bin/ncurses-config"
do_configure \
            --disable-nls \
            --with-ncurses \
            --disable-widec \
            --disable-rc-file \
            --enable-form \
            --disable-mixedform \
            --disable-tailbox \
            $CFG_XDIALOG

make
make_install 
