PKG_NAME=iptraf
PKG_VERSION=3.0.0
PKG_URL="ftp://iptraf.seul.org/pub/iptraf/iptraf-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="An IP traffic monitor"
PKG_LONGDESC="IPTraf is a console-based network statistics utility for Linux. It gathers a variety of figures such as TCP connection packet and byte counts, interface statistics and activity indicators, TCP/UDP traffic breakdowns, and LAN station packet and byte counts."
