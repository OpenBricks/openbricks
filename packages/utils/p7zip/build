#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

cp makefile.linux_any_cpu makefile.machine
sed -e "s/CXX=/CXX?=/" -e "s/CC=/CC?=/" -e "s/DEST_HOME=/DEST_HOME?=/" -i makefile.machine makefile.common

export ALLFLAGS_C="${CFLAGS}"
export ALLFLAGS_CPP="${CXXFLAGS}"
make

export DEST_HOME='$(DESTDIR)/usr'
make_install
