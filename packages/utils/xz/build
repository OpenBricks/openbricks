#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_configure host \
  --disable-nls \
  --disable-scripts \
  --disable-lzmadec \
  --disable-lzmainfo \
  --disable-lzma-links \
  --disable-shared \
  --enable-static

make
make_install toolchain
make clean
rm -f .install/usr/lib/*.la

rm -rf objdir-host
mkdir objdir-host
mv .install objdir-host

do_configure target \
  --disable-nls \
  --disable-scripts \
  --disable-lzmadec \
  --disable-lzmainfo \
  --disable-lzma-links \
  --disable-shared \
  --enable-static

make
make_install
make clean
rm -f .install/usr/lib/*.la

rm -rf objdir-target
mkdir objdir-target
mv .install* objdir-target
