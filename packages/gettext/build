#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*/$1-runtime
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
	    --with-included-gettext \
            --enable-static \
            --disable-shared \
            --disable-dependency-tracking \
            --disable-java \
            --disable-native-java \
            --disable-libasprintf
make
make install
