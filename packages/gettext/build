#!/bin/sh

. config/options

cd $BUILD/$1*

cd $1-tools
do_configure host \
            --with-included-gettext \
            --disable-dependency-tracking \
            --disable-java \
            --disable-native-java \
            --disable-libasprintf \
            --disable-csharp \

make
make_install toolchain
cd ..

# make symlink to correctly populate -dbg package
ln -sf $1-runtime objdir-target
cd $1-runtime
do_configure target \
            --with-included-gettext \
            --disable-dependency-tracking \
            --disable-java \
            --disable-native-java \
            --disable-libasprintf \
            --disable-csharp \

make
make_install
