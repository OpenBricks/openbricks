PKG_NAME=glibc
PKG_URL="http://ftp.gnu.org/gnu/glibc/glibc-2.9.tar.gz"
PKG_VERSION=2.9
PKG_REV=1
[ -n "$TIMEZONE" -o -n "$INCLUDED_TIMEZONES" ] && PKG_DEPENDS="timezone-data"
PKG_BUILD_DEPENDS="gcc-core linux-headers"
PKG_PRIORITY=required
PKG_SECTION=libs
PKG_SHORTDESC="GNU C Library: shared libraries"
PKG_LONGDESC="Contains the standard libraries that are used by nearly all programs on the system. This package includes shared versions of the standard C library and the standard math library, as well as many others."
