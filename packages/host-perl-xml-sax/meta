PKG_NAME=host-perl-xml-sax
PKG_VERSION=0.16
PKG_URL="$CPAN_SRCS/G/GR/GRANTM/XML-SAX-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="perl host-perl-xml-namespacesupport"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Simple API for XML"
PKG_LONGDESC="XML::SAX is a SAX parser access API for Perl. It includes classes and APIs required for implementing SAX drivers, along with a factory class for returning any SAX parser installed on the user's system."
