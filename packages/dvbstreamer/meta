PKG_NAME=dvbstreamer
PKG_VERSION=2.1.0
PKG_URL="$SFNET_SRCS/dvbstreamer/dvbstreamer-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="sqlite readline libev libyaml libtool ncurses"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="console based application to stream DVB/ATSC service(s)"
PKG_LONGDESC="DVBStreamer is an console based application to stream DVB/ATSC service(s) over UDP or to a file. It is more that just an app to stream AV though and feature a simple plugin architecture to allow more features to be added."
