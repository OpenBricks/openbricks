#!/bin/sh

. config/options

cd $BUILD/$1*

CFG_DRV="--disable-i965-driver"
[ "$TARGET_ARCH" = i386 -o "$TARGET_ARCH" = x86_64 ] && \
  CFG_DRV="--enable-i965-driver"

do_configure \
             --with-drivers-path=$XORG_PATH_VAAPI \
             --disable-dummy-driver \
             --disable-dummy-backend \
             --enable-glx \
             --with-gnu-ld \
             $CFG_DRV \

make
make_install

sed -i "s%^driverdir=.*%driverdir=$XORG_PATH_VAAPI%" \
  .install/usr/lib/pkgconfig/libva.pc
