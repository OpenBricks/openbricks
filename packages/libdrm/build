#!/bin/sh

. config/options

if [ "$TARGET_ARCH" = i386 -o "$TARGET_ARCH" = x86_64 ]; then
  CFG_DRIVERS="--enable-intel --enable-radeon --enable-vmwgfx-experimental-api --enable-nouveau-experimental-api --disable-glamo-experimental-api"
elif [ "$TARGET_MACHINE" = gta02 ]; then
  CFG_DRIVERS="--enable-glamo-experimental-api --disable-intel --disable-radeon --disable-vmwgfx-experimental-api --disable-nouveau-experimental-api"
else
  CFG_DRIVERS="--disable-intel --disable-radeon --disable-vmwgfx-experimental-api --disable-nouveau-experimental-api --disable-glamo-experimental-api"
fi

cd $BUILD/$1*
do_configure \
            --enable-silent-rules \
            --enable-libkms \
            $CFG_DRIVERS \
            --enable-udev \
            --enable-largefile \
            --with-kernel-source=$(kernel_path) \

make
make_install
