PKG_NAME=vdpauinfo
PKG_VERSION=0.0.6
PKG_URL="http://people.freedesktop.org/~aplattner/vdpau/vdpauinfo-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libvdpau"
PKG_BUILD_DEPENDS="toolchain libvdpau"
PKG_USE="cxx"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="displays info about your video card VDPAU support"
PKG_LONGDESC="vdpauinfo is a small utility to check for VDPAU features supported by your video card"
