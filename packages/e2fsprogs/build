#!/bin/sh

. config/options

cd $BUILD/$1*

do_configure \
  --disable-libuuid \
  --disable-libblkid \
  --disable-debugfs \
  --disable-profile \
  --disable-checker \
  --disable-imager \
  --disable-resizer \
  --disable-fsck \
  --disable-e2initrd-helper \
  --disable-uuid \
  --disable-nls \
  --enable-symlink-install \

make
make_install
