#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure \
            --enable-libuuid \
            --enable-libblkid \
            --disable-debugfs \

make
make_install sysroot unstripped
strip_bins .install

for fs in ext2 ext3 ext4 ext4dev; do
  rm -f .install/usr/sbin/fsck.$fs
  ln -s fsck .install/usr/sbin/fsck.$fs
  rm -f .install/usr/sbin/mkfs.$fs
  ln -s mke2fs .install/usr/sbin/mkfs.$fs
done
