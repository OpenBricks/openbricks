PKG_NAME=libid3tag
PKG_VERSION=0.15.1b
PKG_URL="ftp://ftp.mars.org/mpeg/libid3tag-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="id3 tag library"
PKG_LONGDESC="libid3tag is a library for reading and (eventually) writing ID3 tags, both
  ID3v1 and the various versions of ID3v2."
