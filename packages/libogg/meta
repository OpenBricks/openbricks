PKG_NAME=libogg
PKG_VERSION=1.3.0
PKG_URL="http://downloads.xiph.org/releases/ogg/libogg-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Ogg bitstream library"
PKG_LONGDESC="Libogg is a library for manipulating ogg bitstreams. It handles both making ogg bitstreams and getting packets from ogg bitstreams."
