PKG_NAME=glew
PKG_VERSION=1.7.0
PKG_URL="$SFNET_SRCS/${PKG_NAME}/${PKG_NAME}/${PKG_VERSION}/${PKG_NAME}-${PKG_VERSION}.tgz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libXext mesa"
PKG_SECTION=x11
PKG_SHORTDESC="The OpenGL Extension Wrangler Library"
PKG_LONGDESC="The OpenGL Extension Wrangler Library -GLEW- is a cross-platform open-source C/C++ extension loading library. GLEW provides efficient run-time mechanisms for determining which OpenGL extensions are supported on the target platform. OpenGL core and extension functionality is exposed in a single header file. GLEW has been tested on a variety of operating systems, including Windows, Linux, Mac OS X, FreeBSD, Irix, and Solaris."
