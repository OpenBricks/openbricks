PKG_NAME=python-bottle
PKG_VERSION=0.11.3
PKG_URL=http://pypi.python.org/packages/source/b/bottle/bottle-${PKG_VERSION}.tar.gz
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain python-distutilscross"
PKG_DEPENDS="Python"
PKG_PRIORITY=optional
PKG_SECTION=python
PKG_SHORTDESC="Fast and simple WSGI-framework for small web-applications."
PKG_LONGDESC="Bottle is a fast and simple micro-framework for small web applications. It offers request dispatching (Routes) with url parameter support, templates, a built-in HTTP Server and adapters for many third party WSGI/HTTP-server and template engines - all in a single file and with no dependencies other than the Python Standard Library."
