PKG_NAME=rest
PKG_VERSION=0.7.10
PKG_URL="http://ftp.gnome.org/pub/GNOME/sources/rest/0.7/rest-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="GLib libsoup libxml2"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="REST service access library"
PKG_LONGDESC="This library was designed to make it easier to access web services that claim to be 'RESTful'. It includes convenience wrappers for libsoup and libxml to ease remote use of the RESTful API."
