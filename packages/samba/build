#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export samba_cv_HAVE_GETTIMEOFDAY_TZ=yes
export samba_cv_USE_SETEUID=yes
export samba_cv_HAVE_IFACE_IFCONF=yes

cd $BUILD/samba*/source
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-cups \
            --with-smbmount \
            --without-ldap \
            --without-winbind \
            --with-included-popt \
            --with-libsmbclient \
            --without-ads
make include/proto.h \
     bin/smbmount \
     bin/smbmnt \
     bin/smbtree \
     bin/libsmbclient.a
$CC $CFLAGS client/mount.cifs.c -o bin/mount.cifs
