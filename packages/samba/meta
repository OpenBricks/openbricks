PKG_NAME=samba
PKG_VERSION=3.5.5
PKG_URL="http://us1.samba.org/samba/ftp/stable/samba-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC zlib gnutls"
PKG_BUILD_DEPENDS="toolchain gettext zlib gnutls"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="LanManager-like file server for Unix"
PKG_LONGDESC="The Samba software suite is a collection of programs that implements the SMB protocol for unix systems, allowing you to serve files to Windows, NT, OS/2 and DOS clients, as well as run as a domain controller for Active Directory"
