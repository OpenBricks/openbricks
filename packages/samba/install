#!/bin/sh

. config/options

cd $BUILD/$1*/source3

if [ "$SAMBA" = yes ]; then
  do_install usr/lib/libnetapi.so*
  do_install usr/lib/libtdb.so*
  do_install usr/lib/libsmbclient.so*
  do_install usr/lib/libsmbsharemodes.so*
  do_install usr/lib/libwbclient.so*
  do_install usr/lib/samba/auth
  do_install usr/lib/samba/vfs

  do_install usr/bin/smbtree
  do_install usr/sbin/mount.cifs
fi

if [ "$SAMBA_SERVER" = yes ]; then
  do_install usr/sbin/smbd

  mkdir -p $INSTALL/etc
  cp $ROOT/$PACKAGES/$1/config/smb.conf $INSTALL/etc/
fi

exit 0
