PKG_NAME=libnih
PKG_VERSION=1.0.2
PKG_URL="http://upstart.ubuntu.com/download/libnih/1.0/libnih-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEPENDS="dbus"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_SECTION=libs
PKG_PRIORITY=optional
PKG_SHORTDESC="NIH Utility Library"
PKG_LONGDESC="libnih is a light-weight standard library of C functions to ease the development of other libraries and applications, especially those normally found in /lib."
