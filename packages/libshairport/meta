PKG_NAME=libshairport
PKG_VERSION=1.2.0.20310_lib
PKG_URL="http://mirrors.xbmc.org/build-deps/darwin-libs/libshairport-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC openssl"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="emulates an AirPort Express for the purpose of streaming music from iTunes and compatible iPods."
PKG_LONGDESC="emulates an AirPort Express for the purpose of streaming music from iTunes and compatible iPods."
