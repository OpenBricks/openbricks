PKG_NAME=OpenVG
PKG_VERSION=1
PKG_REV=1
case "$OVG_PROVIDER" in
  mesa) PKG_BUILD_DEPENDS="mesa" ;;
  sgx)
    case "$TARGET_PLATFORM" in
      omap3)
        PKG_BUILD_DEPENDS="sgx530-OpenGLES" ;;
      omap4)
        PKG_BUILD_DEPENDS="sgx540-OpenGLES" ;;
    esac
    ;;
  imx)
    PKG_BUILD_DEPENDS="imx-graphics" ;;
esac
