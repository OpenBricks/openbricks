PKG_NAME=GLib
PKG_VERSION=2.32.3
PKG_URL="ftp://ftp.gnome.org/pub/gnome/sources/glib/2.32/glib-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEV_DEPENDS="toolchain"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_DEPENDS="zlib dbus libffi"
PKG_BUILD_DEPENDS="$PKG_DEV_DEPENDS GLib-host gettext"
PKG_PRIORITY=required
PKG_SECTION=libs
PKG_SHORTDESC="The GLib library of C routines"
PKG_LONGDESC="GLib is a library containing many useful C routines for things such as trees, hashes, lists, and strings. It is a useful general-purpose C library used by many projects. This package contains the shared libraries."
