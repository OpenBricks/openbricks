PKG_NAME=easybashgui
PKG_VERSION=1.2.8
PKG_URL="http://sites.google.com/site/easybashgui/download/EasyBashGUI_$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="bash bc"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="a bash function library"
PKG_LONGDESC="easybashgui aims to give scripters simple GUI functions using kdialog, zenity, Xdialog or (c)dialog depending on KDE or GNOME running or not, Xdialog installed or not and, eventually, X server running or not (where (c)dialog is the minimum)."
