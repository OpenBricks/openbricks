PKG_NAME=wireless-tools
PKG_VERSION=29
PKG_URL="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/wireless_tools.${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain linux-headers"
PKG_USE="devtools"
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="Tools for manipulating Linux Wireless Extensions"
PKG_LONGDESC="This package contains the Wireless tools, used to manipulate the Linux Wireless Extensions. The Wireless Extension is an interface allowing you to set Wireless LAN specific parameters and get the specific stats."
