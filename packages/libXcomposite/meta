PKG_NAME=libXcomposite
PKG_VERSION=0.4.3
PKG_URL="http://xorg.freedesktop.org/archive/individual/lib/libXcomposite-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_DEPENDS="libX11 libXext libXfixes"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain compositeproto"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 Composite extension library"
PKG_LONGDESC="libXcomposite provides an X Window System client interface to the Composite extension to the X protocol. The Composite extension allows clients called compositing managers to control the final drawing of the screen.  Rendering is done into an off-screen buffer."
