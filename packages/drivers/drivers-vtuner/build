#!/bin/sh

. config/options

get_meta $1

$SCRIPTS/build linux

cd $PKG_BUILD_DIR

make ARCH=$TARGET_ARCH CROSS_COMPILE=$TARGET_PREFIX \
     KVER=$(kernel_version) KDIR=$(kernel_path)

MODULE_DIR=.install/lib/modules/$(kernel_version)/extra/drivers/media/tuners

mkdir -p $MODULE_DIR
cp vtunerc.ko $MODULE_DIR
strip_kmods $MODULE_DIR
