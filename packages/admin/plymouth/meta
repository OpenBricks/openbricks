PKG_NAME=plymouth
PKG_VERSION=0.9.0
PKG_URL="http://www.freedesktop.org/software/plymouth/releases/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="libpng libdrm systemd"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=admin
PKG_SHORTDESC="a graphical boot animation and logger"
PKG_LONGDESC="Plymouth is an application that runs very early in the boot process (even before the root filesystem is mounted!) that provides a graphical boot animation while the boot process happens in the background."
