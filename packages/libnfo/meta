PKG_NAME=libnfo
PKG_VERSION=1.0.1
PKG_URL="http://libnfo.geexbox.org/releases/libnfo-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libxml2"
PKG_RUN_DEPENDS="$TARGET_LIBC libxml2"
PKG_USE="devtools"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="an NFO file parser/writer library"
PKG_LONGDESC="libNFO is a small library to parse and write NFO files. NFO files are used to store metadata information on many multimedia files."
