PKG_NAME=matchbox
PKG_VERSION=1.2
PKG_URL="http://matchbox-project.org/sources/matchbox-window-manager/${PKG_VERSION}/matchbox-window-manager-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="libX11 libXext"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="window manager for resource-limited systems"
PKG_LONGDESC="Matchbox is a base environment for the X Window System running on non-desktop embedded platforms such as handhelds, set-top boxes, kiosks and anything else for which screen space, input mechanisms or system resources are limited."
