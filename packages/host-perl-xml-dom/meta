PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="host-perl host-perl-date-manip host-libwww-perl host-perl-xml-parser"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="A perl module for building DOM Level 1 compliant document structures"
PKG_LONGDESC="This module extends the XML::Parser module by Clark Cooper. The XML::Parser module is built on top of XML::Parser::Expat, which is a lower level interface to James Clark's expat library."
