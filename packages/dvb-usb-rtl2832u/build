#!/bin/sh

. config/options

$SCRIPTS/build linux

cd $BUILD/$1*

export KBUILD_SRC=$(kernel_path)
export INSTALL_MOD_PATH="`pwd`/.install"
export INSTALL_MOD_DIR="kernel/drivers/media/dvb/dvb-usb"

make -C "${KBUILD_SRC}" M="$PWD" modules
make -C "${KBUILD_SRC}" M="$PWD" modules_install
rm -f .install/lib/modules/$(kernel_version)/modules.*
