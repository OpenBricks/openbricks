PKG_NAME=perl-module-build
PKG_VERSION=0.3800
PKG_URL="$CPAN_SRCS/D/DA/DAGOLDEN/Module-Build-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain host-perl-version"
PKG_DEPENDS="perl perl-os-type perl-version perl-module-metadata perl-cpan-meta perl-extutils-cbuilder perl-parse-cpan-meta perl-test-harness"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Build and install Perl modules"
PKG_LONGDESC="Module::Build is a system for building, testing, and installing Perl modules. It is meant to be an alternative to ExtUtils::MakeMaker."
