PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X.Org X server -- VMware display driver"
PKG_LONGDESC="This package provides the driver for VMware client sessions, i.e. if Linux is running inside a VMware session."
