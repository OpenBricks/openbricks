#!/bin/sh

. config/options

$SCRIPTS/unpack GLib

export ac_cv_func_posix_getpwuid_r=yes
export ac_cv_func_posix_getgrgid_r=yes
export glib_cv_stack_grows=no
export glib_cv_uscore=no

cd $BUILD/GLib*

mkdir -p objdir-host
cd objdir-host
do_configure host --disable-gtk-doc-html
make
make_install toolchain
cd ..
