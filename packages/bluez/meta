PKG_NAME=bluez
PKG_VERSION=4.91
PKG_URL="http://www.kernel.org/pub/linux/bluetooth/bluez-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="dbus GLib gettext"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="devtools alsa"
PKG_DEPENDS_alsa="alsa-lib"
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="Bluetooth tools and daemons"
PKG_LONGDESC="This package contains tools and system daemons for using Bluetooth devices. BlueZ is the official Linux Bluetooth protocol stack."
