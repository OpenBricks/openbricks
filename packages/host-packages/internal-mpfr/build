#!/bin/sh

export BUILD=$BUILD_NOARCH

. config/options

$SCRIPTS/build internal-gmp

get_meta internal-gmp
dir_internal_gmp=$ROOT/$PKG_BUILD_DIR/.install/usr

get_meta $1

cd $PKG_BUILD_DIR
mkdir -p objdir
cd objdir

setup_toolchain host

CC=$LOCAL_CC \
CFLAGS="$CFLAGS -Wno-int-in-bool-context" \
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$HOST_NAME \
             --prefix=/usr \
             --disable-shared \
             --enable-static \
             --with-gmp-include="$dir_internal_gmp/include" \
             --with-gmp-lib="$dir_internal_gmp/lib"

make
make_install toolchain

rm -rf ../.install
mv .install ..
