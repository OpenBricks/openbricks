#!/bin/sh

. config/options

build_package () {
  $SCRIPTS/unpack $PKG_PARENT

  cd $BUILD/${PKG_PARENT}-${PKG_VERSION}
  setup_toolchain host

  CC=$LOCAL_CC \
  CFLAGS="$CFLAGS -Wno-stringop-truncation -Wno-stringop-overflow" \
  ./configure --host=$HOST_NAME \
              --build=$HOST_NAME \
              --target=$HOST_NAME \
              --prefix=/usr \
              --disable-acl \
              --disable-xattr \
              --enable-largefile \
              --with-zlib \
              --without-bz2lib \
              --without-lzmadec \
              --without-lzma \
              --without-openssl \
              --without-xml2 \
              --without-expat \
              --without-lzo2 \
              --without-nettle \
              --enable-static \
              --disable-shared

  make clean
  make CC=$LOCAL_CC
  make_install toolchain
  mkdir -p $2/lib $2/include
  cp -r .install/usr/lib/* $2/lib
  cp -r .install/usr/include/* $2/include

  make clean
}

do_cached_build $1

INSTALL=$ROOT/$TOOLCHAIN
do_install lib
do_install include
