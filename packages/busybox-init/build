#!/bin/sh

. config/options

$SCRIPTS/build plymouth-lite
$SCRIPTS/build samba
$SCRIPTS/install fuse
$SCRIPTS/install ntfs-3g

cd $BUILD/$1*
export ARCH=$TARGET_ARCH
export EXTRA_CFLAGS="$CFLAGS"
export CROSS_COMPILE="$TARGET_PREFIX"

do_gcc_strip_lto
do_gcc_strip_gold

make busybox HOSTCC="$HOST_CC"
