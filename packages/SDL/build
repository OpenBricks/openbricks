#!/bin/sh

. config/options

if pkg_uses $1 devtools; then
  DEVTOOLS_CONFIG="--enable-dummyaudio --enable-video-dummy"
else
  DEVTOOLS_CONFIG="--disable-dummyaudio --disable-video-dummy"
fi

if pkg_uses $1 xorg; then
  X11_CONFIG="--enable-video-x11 \
              --enable-video-x11-vm \
              --enable-video-x11-xv \
              --with-x"
else
  X11_CONFIG="--disable-video-x11 \
              --disable-video-x11-vm \
              --disable-video-x11-xv \
              --without-x"
fi

if pkg_uses $1 touchscreen; then
  CFG_TS="--enable-input-tslib"
else
  CFG_TS="--disable-input-tslib"
fi

if pkg_uses $1 directfb; then
  CFG_DFB="--enable-video-directfb"
else
  CFG_DFB="--disable-video-directfb"
fi

if pkg_uses $1 pulseaudio; then
  CFG_PULSE="--enable-pulseaudio"
else
  CFG_PULSE="--disable-pulseaudio"
fi

if pkg_uses $1 opengl; then
  CFG_GL="--enable-video-opengl"
else
  CFG_GL="--disable-video-opengl"
fi

cd $BUILD/$1*
do_configure \
            --enable-libc \
            --enable-audio \
            --enable-video \
            --enable-events \
            --enable-joystick \
            --enable-cdrom \
            --enable-threads \
            --enable-timers \
            --enable-file \
            --enable-loadso \
            --enable-cpuinfo \
            --enable-assembly \
            --disable-oss \
            --enable-alsa \
            --disable-alsatest \
            --enable-alsa-shared \
            --with-alsa-prefix=$LIB_PREFIX/lib \
            --with-alsa-inc-prefix=$LIB_PREFIX/include \
            $CFG_PULSE \
            --disable-esd \
            --disable-esdtest \
            --disable-esd-shared \
            --disable-arts \
            --disable-arts-shared \
            --disable-nas \
            --disable-diskaudio \
            --disable-mintaudio \
            --enable-nasm \
            --disable-altivec \
            --disable-ipod \
            --disable-video-nanox \
            --disable-nanox-debug \
            --disable-nanox-share-memory \
            --disable-nanox-direct-fb \
            --disable-x11-shared \
            --disable-dga \
            --disable-video-dga \
            --disable-video-x11-dgamouse \
            --disable-video-x11-xinerama \
            --disable-video-x11-xme \
            --disable-video-x11-xrandr \
            --disable-video-photon \
            --disable-video-carbon \
            --disable-video-cocoa \
            --enable-video-fbcon \
            $CFG_DFB \
            --disable-video-ps2gs \
            --disable-video-ps3 \
            --disable-video-ggi \
            --disable-video-svga \
            --disable-video-vgl \
            --disable-video-wscons \
            --disable-video-aalib \
            --disable-video-qtopia \
            --disable-video-picogui \
            --disable-osmesa-shared \
            --enable-input-events \
            $CFG_TS \
            --disable-pth \
            --enable-pthreads \
            --enable-pthread-sem \
            --disable-stdio-redirect \
            --disable-directx \
            --enable-sdl-dlopen \
            --disable-atari-ldg \
            --disable-clock_gettime \
            $X11_CONFIG \
            $DEVTOOLS_CONFIG \
            $CFG_GL \

make
sed -i "s%^prefix=.*%prefix=$LIB_PREFIX%" sdl-config
make_install
