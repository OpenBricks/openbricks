PKG_NAME=SDL
PKG_URL="http://www.libsdl.org/release/SDL-1.2.14.tar.gz"
PKG_VERSION=1.2.14
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC alsa-lib"
PKG_BUILD_DEPENDS="toolchain alsa-lib"
[ "$XORG" = yes ] && \
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11 libXv"
if [ "$TOUCHSCREEN" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS tslib"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS tslib"
fi
if [ "$DIRECTFB" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS DirectFB"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS DirectFB"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Simple DirectMedia Layer"
PKG_LONGDESC="SDL is a library that allows programs portable low level access to
 a video framebuffer, audio output, mouse, and keyboard."
