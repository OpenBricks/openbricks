PKG_NAME=curlftpfs
PKG_VERSION=0.9.2
PKG_URL="$SFNET_SRCS/curlftpfs/curlftpfs-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC fuse GLib curl"
PKG_BUILD_DEPENDS="toolchain fuse GLib curl"
PKG_USE="uclibc"
PKG_DEPENDS_uclibc="libiconv"
PKG_PRIORITY=optional
PKG_SECTION=filesystem
PKG_SHORTDESC="filesystem to access FTP hosts based on FUSE and cURL"
PKG_LONGDESC="CurlFtpFS is a tool to mount FTP hosts as local directories. It connects to a FTP server and maps its directory structure to the local filesystem."
