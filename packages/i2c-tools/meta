PKG_NAME=i2c-tools
PKG_VERSION=3.0.3
PKG_URL="http://dl.lm-sensors.org/i2c-tools/releases/i2c-tools-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=utils
PKG_SHORTDESC="tools for I2C"
PKG_LONGDESC="This package contains a heterogeneous set of I2C tools for Linux: a bus probing tool, a chip dumper, register-level access helpers, EEPROM decoding scripts, and more."
