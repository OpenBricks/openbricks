PKG_NAME=termcap
PKG_VERSION=1.3.1
PKG_URL="http://mirror.switch.ch/ftp/mirror/gnu/termcap/termcap-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Termcap is a library and data base that enables programs to use display terminals in a terminal-independent manner."
PKG_LONGDESC="The termcap data base describes the capabilities of hundreds of different display terminals in great detail."
