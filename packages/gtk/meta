PKG_NAME=gtk
PKG_VERSION=2.22.1
PKG_URL="http://ftp.gnome.org/pub/gnome/sources/gtk+/2.22/gtk+-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="atk cairo gnutls GLib jpeg libpng tiff pango zlib gettext gdk-pixbuf"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="xorg devtools"
PKG_DEPENDS_xorg="libX11 libXcursor libXdamage libXfixes libXi libXrandr libXrender libXcomposite"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="The GTK+ graphical user interface library"
PKG_LONGDESC="The GTK+ is a multi-platform toolkit for creating graphical user interfaces. Offering a complete set of widgets, the GTK+ is suitable for projects ranging from small one-off tools to complete application suites."
