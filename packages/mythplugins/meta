PKG_NAME=mythplugins
PKG_VERSION=0.24.1
PKG_URL="http://ftp.osuosl.org/pub/mythtv/mythplugins-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="mythtv"
PKG_USE="opengl mytharchive mythbrowser mythgallery mythgame mythmusic visualizations mythnews mythvideo mythzoneminder"
PKG_DEPENDS_opengl="mesa"
PKG_USE_DESC_mytharchive="Enable MythArchive plugin"
PKG_USE_DEFAULT_mytharchive=no
PKG_USE_DESC_mythbrowser="Enable MythBrowser plugin"
PKG_USE_DEFAULT_mythbrowser=yes
PKG_USE_DESC_mythgallery="Enable MythGallery plugin"
PKG_USE_DEFAULT_mythgallery=yes
PKG_DEPENDS_mythgallery="libexif"
PKG_RUN_DEPENDS_mythgallery="dcraw"
PKG_USE_DESC_mythgame="Enable MythGame plugin"
PKG_USE_DEFAULT_mythgame=no
PKG_USE_DESC_mythmusic="Enable MythMusic plugin"
PKG_USE_DEFAULT_mythmusic=yes
PKG_DEPENDS_mythmusic="libcdaudio cdparanoia taglib libogg libvorbis lame flac"
PKG_USE_DESC_visualizations="Enable MythMusic visualizations"
PKG_USE_DEFAULT_visualizations=no
PKG_DEPENDS_visualizations="libvisual fftw SDL"
PKG_USE_DESC_mythnews="Enable MythNews plugin"
PKG_USE_DEFAULT_mythnews=yes
PKG_USE_DESC_mythvideo="Enable MythVideo plugin"
PKG_USE_DEFAULT_mythvideo=yes
PKG_USE_DESC_mythzoneminder="Enable MythZoneMinder plugin"
PKG_USE_DEFAULT_mythzoneminder=no
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="collection of MythTV plugins"
PKG_LONGDESC="MythTV implements a fully-features PVR with a unified graphical interface."
