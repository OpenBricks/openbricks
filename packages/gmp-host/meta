PKG_NAME=gmp-host
PKG_VERSION=5.0.5
PKG_URL="http://ftp.gnu.org/gnu/gmp/gmp-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_BUILD_DEPENDS="ccache make m4"
PKG_SHORTDESC="The GNU Multiple Precision Arithmetic Library"
PKG_LONGDESC="GMP is a free library for arbitrary precision arithmetic, operating on signed integers, rational numbers, and floating point numbers. There is no practical limit to the precision except the ones implied by the available memory in the machine GMP runs on. GMP has a rich set of functions, and the functions have a regular interface."
