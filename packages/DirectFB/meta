PKG_NAME=DirectFB
PKG_URL="http://directfb.org/downloads/Core/DirectFB-1.4/DirectFB-1.4.3.tar.gz"
PKG_VERSION=1.4.3
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC zlib jpeg libungif freetype sysfsutils"
PKG_BUILD_DEPENDS="toolchain zlib jpeg libungif freetype sysfsutils"
if [ "$XORG" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libX11"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11"
fi
if [ "$LIRC" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS lirc"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS lirc"
fi
if [ "$TOUCHSCREEN" = yes ]; then
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS tslib"
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS tslib"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="direct frame buffer graphics"
PKG_LONGDESC="DirectFB is a graphics library which was designed with embedded systems in mind. It offers maximum hardware accelerated performance at a minimum of resource usage and overhead."
