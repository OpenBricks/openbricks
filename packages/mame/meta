PKG_NAME=mame
PKG_VERSION=0.142s
PKG_URL="$DISTRO_SRCS/mame-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_LICENSE=non-free
PKG_RUN_DEPENDS="$TARGET_LIBC SDL libX11 libXinerama"
PKG_BUILD_DEPENDS="toolchain SDL libX11 libXinerama mesa SDL-ttf fontconfig"
PKG_USE="cxx"
PKG_REQUIRES_USE="SDL:xorg"
PKG_PRIORITY=optional
PKG_SECTION=games
PKG_SHORTDESC="Multiple Arcade Machine Emulator (MAME)"
PKG_LONGDESC="MAME is an emulator: it reproduces, more or less faithfully, the behavior of several arcade machines. But hardware is useless without software, so an image of the ROM which run on that hardware is required."
