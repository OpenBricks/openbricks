PKG_NAME=swig
PKG_VERSION=2.0.8
PKG_URL="$SFNET_SRCS/${PKG_NAME}/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain pcre-host pcre"
PKG_PRIORITY=optional
PKG_SHORTDESC="SWIG is an interface compiler"
PKG_LONGDESC="SWIG is an interface compiler that connects programs written in C and C++ with scripting languages such as Perl, Python, Ruby, and Tcl"

