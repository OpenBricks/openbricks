#!/bin/sh

. config/options

$SCRIPTS/build linux
cd $BUILD/$1*/mcast/dvbloop
make -j1 \
  KDIR=$(kernel_path) \
  KERNELRELEASE=$(kernel_version) \
  SRCDIR=$(kernel_path) \
  OUTDIR=$(kernel_path) \
install_dir="$PWD/.install"
#debug_dir="$PWD/.install-debuginfo/usr/lib/debug"
cd ../..

mkdir -p .install/lib/modules/$(kernel_version)/kernel/drivers/media/dvbloop
cp mcast/dvbloop/dvbloop.ko .install/lib/modules/$(kernel_version)/kernel/drivers/media/dvbloop
#mkdir -p $install_dir
#$debug_dir

#make -j1 install \
#  DESTDIR=$install_dir \
#  KERNELRELEASE=$(kernel_version) \


#strip_kmods "$install_dir/lib/modules/$(kernel_version)" "$debug_dir"


cd mcast/client

#do_configure
make mcli
#make_install
cd ../..
mkdir -p .install/usr/sbin
cp mcast/client/mcli .install/usr/sbin
#make_install

cd mcast/tool
make
#make_install
cd ../..
#mkdir -p .install/usr/bin
cp mcast/tool/netcvdiag .install/usr/sbin
cp mcast/tool/netcvlogview .install/usr/sbin
cp mcast/tool/netcvupdate .install/usr/sbin

#make_install
