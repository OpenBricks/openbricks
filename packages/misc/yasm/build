#!/bin/sh

. config/options
get_meta $1
	
setup_toolchain host

cd $PKG_BUILD_DIR
sed -i 's#) ytasm.*#)#' Makefile.in

mkdir objdir-host 
cd objdir-host
#do_configure host
do_configure host \
	    --host=$HOST_NAME \
            --build=$HOST_NAME \
            --disable-debug \
            --disable-warnerror \
            --disable-profiling \
            --disable-gcov \
            --disable-python \
            --disable-python-bindings \
            --enable-nls \
            --disable-rpath \
            --without-dmalloc \
            --with-gnu-ld \
            --without-libiconv-prefix \
            --without-libintl-prefix


make
make_install toolchain
cd ..

mkdir objdir-target 
cd objdir-target 
setup_toolchain target


do_configure target \
            --host=$HOST_NAME \
            --build=$TARGET_NAME \
            --target=$TARGET_NAME \
            --disable-debug \
            --disable-warnerror \
            --disable-profiling \
            --disable-gcov \
            --disable-python \
            --disable-python-bindings \
            --enable-nls \
            --disable-rpath \
            --without-dmalloc \
            --with-gnu-ld \
            --without-libiconv-prefix \
            --without-libintl-prefix

make
make_install

