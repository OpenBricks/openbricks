#!/bin/sh

. config/options

build_package () {
  cd $PKG_BUILD_DIR
  setup_toolchain host

  CC=$LOCAL_CC \
  ./configure --host=$HOST_NAME  \
              --build=$HOST_NAME \
              --disable-nls      \
              --without-guile    \
            
  make

  # copy directly to $cache_dir
  mkdir -p $2/bin
  cp $1 $2/bin
}

# perform real build or restore cached copy
do_cached_build $1
