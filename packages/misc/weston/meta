PKG_NAME=weston
PKG_VERSION=1.6.0
PKG_URL="http://wayland.freedesktop.org/releases/weston-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC libpng mesa libglu wayland libxkbcommon cairo gdk-pixbuf libXcursor mtdev"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="reference implementation of a wayland compositor"
PKG_LONGDESC=" Part of the Wayland project is also the Weston reference implementation
 of a Wayland compositor. Weston can run as an X client or under Linux
 KMS and ships with a few demo clients. The Weston compositor is a minimal
 and fast compositor and is suitable for many embedded and mobile use
 cases."
