PKG_NAME=firmware-wifi-intel-pw3945
PKG_VERSION=15.32.2.9
PKG_URL="http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-3945-ucode-${PKG_VERSION}.tgz"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=firmware
PKG_LICENSE="non-free"
PKG_SHORTDESC="Intel PRO/Wireless 3945ABG/BG Network Connection (iwl3945) firmware images"
PKG_LONGDESC="The drivers for these chips in the Linux 2.6.x kernel do not include the firmware; this firmware needs to be loaded by the host on most cards using these chips. This package provides the firmware images which should be automatically loaded as needed by the hotplug system."
