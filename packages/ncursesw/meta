PKG_NAME=ncursesw
PKG_VERSION=5.7
PKG_URL="http://ftp.gnu.org/pub/gnu/ncurses/ncurses-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="shared libraries for terminal handling (with wide-char support)"
PKG_LONGDESC="This package contains the shared libraries necessary to run programs compiled with ncursesw (with wide-char support)."
