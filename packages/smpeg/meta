PKG_NAME=smpeg
PKG_VERSION=r390
PKG_URL="$DISTRO_SRCS/smpeg-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="SDL"
PKG_USE="xorg r128"
PKG_DEPENDS_xorg="libX11"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="SDL MPEG Player Library"
PKG_LONGDESC="SMPEG (SDL MPEG Player Library) is a free MPEG1 video player library with sound support. Video playback is based on the ubiquitous Berkeley MPEG player, mpeg_play v2.2. Audio is played through a slightly modified mpegsound library, part of splay v0.8.2. SMPEG supports MPEG audio (MP3), MPEG-1 video, and MPEG system streams."
