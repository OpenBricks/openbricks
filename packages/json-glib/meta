PKG_NAME=json-glib
PKG_VERSION=0.14.0
PKG_URL="http://ftp.gnome.org/pub/GNOME/sources/json-glib/0.14/json-glib-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="GLib"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GLib JSON manipulation library"
PKG_LONGDESC="JSON-GLib is a library for parsing, generating and manipulating JavaScript Object Notation (JSON) data streams using the GLib type system. It allows manipulating JSON data types with a Document Object Model API. It also allows serializing and deserializing simple or complex GObjects to and from JSON data types."
