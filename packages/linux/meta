PKG_NAME=linux
PKG_VERSION=2.6.35-rc6
PKG_URL="http://www.kernel.org/pub/linux/kernel/v2.6/testing/linux-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain module-init-tools"
[ "$TARGET_ARCH" = arm ] && \
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS uboot-mkimage"
PKG_RUN_DEPENDS="module-init-tools"
PKG_PRIORITY=required
PKG_SECTION=admin
PKG_SHORTDESC="Linux kernel image"
PKG_LONGDESC="This package provides the Linux kernel image for GeeXboX."
