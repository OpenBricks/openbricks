PKG_NAME=perl-http-server-simple
PKG_VERSION=0.44
PKG_URL="$CPAN_SRCS/J/JE/JESSE/HTTP-Server-Simple-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Lightweight HTTP server"
PKG_LONGDESC="This is a simple standalone HTTP server. By default, it doesn't thread or fork. It does, however, act as a simple frontend which can be used to build a standalone web-based application or turn a CGI into one."
