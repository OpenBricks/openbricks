PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="host-perl"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="interface to (some parts of) the Linux DVB API"
PKG_LONGDESC="This module provides an interface to the Linux DVB API. It is a straightforward translation of the C API. You should read the Linux DVB API description to make any sense of this module."
