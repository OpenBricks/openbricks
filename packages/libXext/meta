PKG_NAME=libXext
PKG_VERSION=1.1.2
PKG_URL="http://xorg.freedesktop.org/releases/individual/lib/libXext-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libX11"
PKG_BUILD_DEPENDS="toolchain libX11 xextproto" 
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="X11 miscellaneous extension library"
PKG_LONGDESC="libXext provides an X Window System client interface to several extensions to the X protocol."
