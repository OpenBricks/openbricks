#!/bin/sh

. config/options

setup_toolchain host

if [ $TARGET_ARCH = "x86_64" -o $TARGET_ARCH = "powerpc64" ]; then
  WITH_64B_BFD="--enable-64-bit-bfd"
fi

[ -z "$TOOLCHAIN_GOLD_LINKER" ] && TOOLCHAIN_GOLD_LINKER=no

cd $BUILD/$1*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=/usr \
             --with-sysroot=$SYSROOT_PREFIX \
             --disable-werror \
             --disable-multilib \
             $WITH_64B_BFD \
             --enable-plugins \
             --enable-gold=$TOOLCHAIN_GOLD_LINKER \
             --enable-ld=yes \
             --enable-lto \
             --disable-nls \

make
make_install toolchain
rm -rf ../.install
cp -P .install/usr/bin/$TARGET_NAME-ld.gold .install/usr/bin/$TARGET_NAME-gold
cp -P .install/usr/$TARGET_NAME/bin/ld.gold .install/usr/$TARGET_NAME/bin/gold
mv .install ..
