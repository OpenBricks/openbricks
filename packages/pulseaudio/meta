PKG_NAME=pulseaudio
PKG_VERSION=0.9.23
PKG_URL="http://freedesktop.org/software/pulseaudio/releases/pulseaudio-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="dbus udev alsa-lib libsndfile libtool speex"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain intltool"
PKG_PRIORITY=standard
PKG_SECTION=sound
PKG_SHORTDESC="PulseAudio sound server"
PKG_LONGDESC="PulseAudio is a sound server for POSIX and WIN32 systems. It is a drop in replacement for the ESD sound server with much better latency, mixing/re-sampling quality and overall architecture."
