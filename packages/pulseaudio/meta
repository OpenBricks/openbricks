PKG_NAME=pulseaudio
PKG_URL="http://0pointer.de/lennart/projects/pulseaudio/pulseaudio-0.9.21.tar.gz"
PKG_VERSION=0.9.21
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC dbus udev alsa-lib libsndfile libtool"
PKG_BUILD_DEPENDS="toolchain libtool libsndfile speex intltool dbus udev alsa-lib"
PKG_PRIORITY=standard
PKG_SECTION=sound
PKG_SHORTDESC="PulseAudio sound server"
PKG_LONGDESC="PulseAudio is a sound server for POSIX and WIN32 systems. It is a drop in replacement for the ESD sound server with much better latency, mixing/re-sampling quality and overall architecture."
