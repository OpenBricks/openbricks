#!/bin/sh

. config/options
get_meta $1

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD/${PKG_NAME}-${PKG_VERSION}

# temporary fix to allow build with vdr 1.7.27 until upstream is updated
export CXXFLAGS="$CXXFLAGS -DLEGACY_CRECEIVER"

make \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale"
