PKG_NAME=perl-version-requirements
PKG_VERSION=0.101020
PKG_URL="$CPAN_SRCS/R/RJ/RJBS/Version-Requirements-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="a set of version requirements for a CPAN dist"
PKG_LONGDESC="A Version::Requirements object models a set of version constraints like those specified in the META.yml or META.json files in CPAN distributions. It can be built up by adding more and more constraints, and it will reduce them to the simplest representation."
