PKG_NAME=glmark2
PKG_VERSION=2011.07
PKG_URL="http://launchpad.net/glmark2/2011.11/$PKG_VERSION/+download/glmark2-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_ARCH="i386 x86_64 arm"
PKG_DEPENDS="$TARGET_LIBC libpng12 libX11"
PKG_BUILD_DEPENDS="toolchain"
if [ $TARGET_ARCH = arm ]; then
  PKG_DEPENDS="$PKG_DEPENDS OpenGLES"
else
  PKG_DEPENDS="$PKG_DEPENDS mesa"
fi
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="An OpenGL(|ES) benchmark"
PKG_LONGDESC=""
