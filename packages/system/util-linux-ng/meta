PKG_NAME=util-linux-ng
PKG_VERSION=2.27
PKG_REV="2"
PKG_URL="http://ftp.kernel.org/pub/linux/utils/util-linux/v${PKG_VERSION}/util-linux-${PKG_VERSION}.tar.xz"
PKG_BUILD_DEPENDS="toolchain ncurses"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=standard
PKG_SECTION=system
PKG_SHORTDESC="Miscellaneous system utilities"
PKG_LONGDESC="This package contains a number of important utilities, most of which are oriented towards maintenance of your system. Some of the more important utilities included in this package allow you to partition your hard disk, view kernel messages, and create new filesystems."
