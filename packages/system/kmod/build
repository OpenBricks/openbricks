#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

mkdir -p objdir-target
cd objdir-target

do_configure \
  --disable-manpages \
  --enable-shared \
  --disable-static

make
make_install

mkdir -p .install/sbin
for target in depmod insmod modinfo modprobe rmmod; do
  ln -sf ../usr/bin/kmod .install/sbin/$target
done

ln -sf kmod .install/usr/bin/lsmod
