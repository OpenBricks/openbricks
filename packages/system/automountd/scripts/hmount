#!/bin/sh

. /etc/automountd.conf

TYPE="$1"
DEVICE="$2"
MP="$3"
FSTYPE="$4"

if [ $AUTOMOUNT="on" ]; then
do_mount () {
  MNT="/mnt/$2"
  [ -z "$3" ] && FSOPT= || FSOPT="-t $3"
  mkdir -p "$MNT"
  mkdir -p /root/mnt
  LINK=`echo $2 | sed -e 's/ /_/g' -e  's/#//g' -e 's/(//g' -e 's/)//g'`
  mount -o $MOUNT_MODE $FSOPT $1 "$MNT" && echo "$1     $MNT    $3" >> /var/mnts && create_link "$MNT" /root/mnt/"$LINK"
}

create_link () {
    ! [ -h "$2" ] && ln -s "$1" "$2"
}   

case $TYPE in
  HDD)
    do_mount "$DEVICE" "$MP" "$FSTYPE"
    hdparm -S24 "$DEVICE" >/dev/null 2>&1
    ;;

  CD)
    do_mount "$DEVICE" "$MP"
    ;;

  CDDA)
    # Audio CDs can't be mounted
    ;;

  VCD|SVCD)
    do_mount "$DEVICE" "$MP"
    ;;

  DVD)
    # VideoDVD do not require being mounted to be played
    ;;

  *)
    ;;
esac
fi
