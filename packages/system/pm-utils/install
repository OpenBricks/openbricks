#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR
mkdir -p $INSTALL/etc/pm/config.d
  cp $ROOT/$PACKAGES/$PKG_SECTION/$1/config.d/* $INSTALL/etc/pm/config.d || true
mkdir -p $INSTALL/etc/pm/power.d
  cp $ROOT/$PACKAGES/$PKG_SECTION/$1/power.d/* $INSTALL/etc/pm/power.d || true
mkdir -p $INSTALL/etc/pm/sleep.d
  cp $ROOT/$PACKAGES/$PKG_SECTION/$1/sleep.d/* $INSTALL/etc/pm/sleep.d || true

do_install usr/bin
do_install usr/lib/pm-utils

mkdir -p $INSTALL/usr/lib/pm-utils/video-quirks/
  cp $ROOT/$PACKAGES/$PKG_SECTION/$1/quirks/*.quirkdb $INSTALL/usr/lib/pm-utils/video-quirks/

do_install usr/sbin
