#!/bin/sh

#
# NFS AutoMounter
#

. /etc/funcs

MOUNT_POINT=/mnt/nfs

clean_up () {
  echo "Trap : exiting ..."
  while read i ; do 
  a=`echo $i | grep "/mnt/nfs/"| cut -d" " -f2`
  if [ -n "$a" ] ; then
    echo " Found $a , trying to umount ..."
    if umount $a ; then 
      echo "Success"
    else
      echo "Trying to force ..."
      umount -l $a
    fi
  fi
  done < /proc/mounts
  exit 0
}

mount_nfs () {
  MNT="$MOUNT_POINT/$2"
   logger -t automount_nfs "Trying to mount: $2"
  if [ ! -d "$MNT" ]; then
    mkdir -p "$MNT"
  fi
  mount -t nfs -o ro,rsize=32768,soft,noatime,nolock "$1" "$MNT" >/dev/null 2>&1
}

trap clean_up SIGHUP SIGINT SIGTERM

wait_for_network

IFS='
'

for MOUNTS in `grep -v "^#" /etc/nfs | grep -v "^$"`; do
  SRV="`echo $MOUNTS | sed 's/[ ]*\([^ ]*\)[ ]*.*/\1/'`"
  DIR="`echo $MOUNTS | sed 's/[ ]*[^ ]*[ ]*\([^ ]*\)/\1/'`"
  mount_nfs "$SRV" "$DIR"
done

while true ; do
  sleep 2000
done
