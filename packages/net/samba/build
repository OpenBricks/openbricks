#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR/source3

export samba_cv_HAVE_GETTIMEOFDAY_TZ=yes
export samba_cv_USE_SETEUID=yes
export samba_cv_HAVE_IFACE_IFCONF=yes
export SMB_BUILD_CC_NEGATIVE_ENUM_VALUES=no
export samba_cv_CC_NEGATIVE_ENUM_VALUES=yes
export samba_cv_have_longlong=yes

pkg_uses linux ipv6 || export libreplace_cv_HAVE_IPV6=no

export LIBS="-lintl"
local_cflags="-Wno-unused"

GCC_NO_LTO=1 \
do_configure \
            --with-static-modules=charset_CP437,charset_CP850 \
            --with-fhs \
            --disable-debug \
            --disable-swat \
            --disable-cups \
            --disable-iprint \
            --disable-fam \
            --disable-avahi \
            --enable-gnutls \
            --enable-pie \
            --disable-cups \
            --with-cifsmount \
            --without-ldap \
            --with-winbind \
            --with-included-popt \
            --with-libsmbclient \
            --with-libsmbsharemodes \
            --without-ads \
            --without-quotas \
            --without-sys-quotas \
            --without-pam \
            --without-nisplus-home \
            --without-acl-support \
            --without-sqlite3 \
            --with-syslog \
            --with-configdir=/etc \
            --with-privatedir=/etc \

make

make_install
