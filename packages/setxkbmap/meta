PKG_NAME=setxkbmap
PKG_VERSION=1.2.0
PKG_URL="$XORG_SRCS/app/setxkbmap-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11 libxkbfile"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libxkbfile xkeyboard-config"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="set the keyboard using the X Keyboard Extension"
PKG_LONGDESC="The setxkbmap command maps the keyboard to use the layout determined by the options specified on the command line. An XKB keymap is constructed from a number of components which are compiled  only  as  needed."
