PKG_NAME=perl-term-readkey
PKG_VERSION=2.30.02
PKG_URL="$CPAN_SRCS/S/ST/STSI/TermReadKey-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="module for simple terminal control"
PKG_LONGDESC="Term::ReadKey is a compiled perl module dedicated to providing simple control over terminal driver modes (cbreak, raw, cooked, etc.,) support for non-blocking reads, if the architecture allows, and some generalized handy functions for working with terminals."
