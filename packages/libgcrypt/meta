PKG_NAME=libgcrypt
PKG_VERSION=1.4.5
PKG_URL="ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libgpg-error"
PKG_RUN_DEPENDS="$TARGET_LIBC libgpg-error"
PKG_PRIORITY=standard
PKG_SECTION=libs
PKG_SHORTDESC="LGPL Crypto library - runtime library"
PKG_LONGDESC="libgcrypt contains cryptographic functions. Many important free ciphers, hash algorithms and public key signing algorithms have been implemented: arcfour, blowfish, cast5, DSA, DSA2, des, 3DES, elgamal, MD5, rijndael, RMD160, RSA, SEED, SHA1, SHA-384, SHA-512, twofish, tiger."
