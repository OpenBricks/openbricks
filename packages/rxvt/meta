PKG_NAME=rxvt
PKG_VERSION=2.7.10
PKG_URL="$SFNET_SRCS/rxvt/$PKG_NAME-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC xorg-server"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="a colour vt102 terminal emulator"
PKG_LONGDESC="rxvt is a colour vt102 terminal emulator intended as an xterm replacement for users who do not require features such as Tektronix 4014 emulation and toolkit-style configurability. The rxvt terminal is light on system resources and otherwise packe dwit"
