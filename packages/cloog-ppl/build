#!/bin/sh

. config/options

setup_toolchain host

cd $BUILD/$1*

sed -i "s%^ppl_minor_version=.*%ppl_minor_version=11%" configure

mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=/usr \
             --disable-shared \
             --enable-static \
             --with-bits=gmp \
             --with-gmp="$ROOT/$TOOLCHAIN" \
             --with-ppl="$ROOT/$TOOLCHAIN" \
             --with-host-libstdcxx="-lstdc++"

make
make_install toolchain
rm -rf ../.install
mv .install ..
