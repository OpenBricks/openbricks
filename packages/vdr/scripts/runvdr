#!/bin/sh

[ ! -d /video ] && mkdir /video

while [ ! -d /dev/dvb/adapter0 ] ; do 
  sleep 2
done

PLUGINS=""
for file in /etc/vdr/plugins.d/*; do
  if [ -f "$file" ]; then
    # plugins are enabled by default
    PLUGIN=""
    OPTIONS=""
    INITCMD=""
    ENABLED=yes
    . $file
    [ "$ENABLED" = yes ] && PLUGINS="$PLUGINS -P'$PLUGIN $OPTIONS'"
    [ -n "$INITCMD" ] && eval $INITCMD
  fi
done

[ -r /etc/locale ] && export LANG=`cat /etc/locale`
export DISPLAY=":0"
  
eval vdr -g /tmp --vfat --no-kbd $PLUGINS
