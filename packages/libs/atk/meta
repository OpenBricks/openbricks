PKG_NAME=atk
PKG_VERSION=2.11.90
PKG_URL="http://ftp.acc.umu.se/pub/gnome/sources/atk/2.11/atk-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="GLib"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain gettext libffi"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="The ATK accessibility toolkit"
PKG_LONGDESC="ATK is a toolkit providing accessibility interfaces for applications or other toolkits. By implementing these interfaces, those other toolkits or applications can be used with tools such as screen readers, magnifiers, and other alternative input devices."
