PKG_NAME=SDL
PKG_VERSION=1.2.15
PKG_URL="http://www.libsdl.org/release/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="alsa-lib"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain nasm"
PKG_USE="xorg touchscreen directfb pulseaudio devtools opengl"
PKG_DEPENDS_xorg="libX11 libXv"
PKG_DEPENDS_touchscreen="tslib"
PKG_DEPENDS_directfb="DirectFB"
PKG_DEPENDS_pulseaudio="pulseaudio"
PKG_DEPENDS_opengl="mesa libglu"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Simple DirectMedia Layer"
PKG_LONGDESC="SDL is a library that allows programs portable low level access to a video framebuffer, audio output, mouse, and keyboard."
