PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="OpenGL Mathematics"
PKG_LONGDESC="A header only C++ mathematics library for graphics software based on the OpenGL Shading Language (GLSL) specifications"
