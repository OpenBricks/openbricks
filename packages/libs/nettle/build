#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

mkdir -p objdir-host
cd objdir-host
do_configure host \
	--disable-openssl \

make
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
export local_cflags="-std=c99"
do_configure target \
	--enable-shared \
	--enable-static \
	--disable-openssl \

make
make_install
