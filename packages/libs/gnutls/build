#!/bin/sh

. config/options
get_meta $1

#export ac_cv_libz=set

CFG_CXX="--disable-cxx"
[ "$TOOLCHAIN_CXX" = yes ] && CFG_CXX="--enable-cxx"

cd $PKG_BUILD_DIR
do_configure \
	$CFG_CXX \
	--enable-cryptodev \
	--enable-openssl-compatibility \
	--with-included-libtasn1 \
	--without-p11-kit \
	--disable-gtk-doc \
	--disable-gtk-doc-html \
	--disable-gtk-doc-pdf \
	--disable-nls \
	--disable-guile \
	--enable-local-libopts \
	--with-libz-prefix=$LIB_PREFIX

make
make_install
