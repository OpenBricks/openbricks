#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

./autogen.sh

local_cflags="-DSOIL_GLES2 -DLINUX -DEGL_API_FB"

do_configure \
    --enable-shared \
    --disable-static \
    --disable-qt \
    --disable-pulseaudio \
    --disable-jack \
    --disable-sdl \
    --enable-gles \
    --disable-threading

make
make_install
