#!/bin/sh

. config/options

cd $BUILD/$1*

do_configure \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --enable-nasm \
            --disable-rpath \
            --disable-cpml \
            --disable-gtktest \
            --disable-efence \
            --disable-analyzer-hooks \
            --enable-decoder \
            --disable-frontend \
            --disable-mp3x \
            --disable-mp3rtp \
            --disable-dynamic-frontends \
            --enable-expopt=no \
            --enable-debug=no \
            --with-gnu-ld \
            --with-fileio=lame


# lame parallel build is broken
export MAKEFLAGS=-j1

make
make_install
