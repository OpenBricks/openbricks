PKG_NAME=taglib
PKG_URL_REV="1~d8e5077"
PKG_VERSION=1.11+${PKG_URL_REV}
PKG_URL="https://github.com/taglib/taglib.git"
PKG_URL_PROTO=git
PKG_REV="2"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain cmake"
PKG_DEPENDS="zlib"
PKG_USE="cxx"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="TagLib Audio Meta-Data Library"
PKG_LONGDESC="TagLib is a library for reading and editing the meta-data of several popular audio formats. Currently it supports both ID3v1 and ID3v2 for MP3 files, Ogg Vorbis comments and ID3 tags and Vorbis comments in FLAC files."
