PKG_NAME=emotion
PKG_VERSION=`( get_meta EFL; echo $PKG_VERSION )`
PKG_URL="http://download.enlightenment.org/releases/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC ecore edje"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Emotion, video and audio codec API..."
PKG_LONGDESC="Emotion is a library to easily integrate media playback into EFL applications, it will take care of using Ecore's main loop and video display is done using Evas."
