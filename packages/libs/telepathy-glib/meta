PKG_NAME=telepathy-glib
PKG_VERSION=0.19.3
PKG_URL="http://telepathy.freedesktop.org/releases/telepathy-glib/telepathy-glib-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC GLib dbus dbus-glib"
PKG_BUILD_DEPENDS="toolchain GLib-host"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Telepathy GLib communication framework"
PKG_LONGDESC="Telepathy is a D-Bus framework for unifying real time communication, including instant messaging, voice calls and video calls. It abstracts differences between protocols to provide a unified interface for applications."
