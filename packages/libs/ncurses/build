#!/bin/sh

. config/options

cd $BUILD/$1*

setup_toolchain host
mkdir -p objdir-host
cd objdir-host
../configure
make -C include
make -C progs tic
cd ..

setup_toolchain target
mkdir -p objdir-target
cd objdir-target
export PKG_CONFIG_LIBDIR="/usr/lib/pkgconfig"
../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --with-build-cc=$HOST_CC \
             --with-build-cppflags="$HOST_CPPFLAGS -I../include" \
             --with-build-cflags="$HOST_CFLAGS" \
             --with-build-ldflags="$HOST_LDFLAGS" \
             --without-cxx \
             --without-cxx-binding \
             --without-ada \
             --without-progs \
             --with-shared \
             --without-normal \
             --without-debug \
             --without-profile \
             --disable-rpath \
             --enable-overwrite \
             --enable-const \
             --enable-echo \
             --disable-warnings \
             --disable-assertions \
             --enable-pc-files \
             --enable-termcap

make
make -C include
make_install

sed -i "s%^prefix=.*%prefix=$LIB_PREFIX%" .install/usr/bin/ncurses5-config

ln -sf libncurses.so .install/usr/lib/libtinfo.so

