#!/bin/sh

. config/options

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host
export LIBJPEG=$ROOT/$TOOLCHAIN/lib/libjpeg.la
do_configure host \
            --disable-dependency-tracking \
            --enable-silent-rules \
            --disable-glibtest \
            --disable-nls \
            --disable-gtk-doc-html \
            --with-included-loaders=yes \
            --with-libpng \
            --with-libjpeg \
            --with-libtiff \
            --without-libjasper \

make
make_install toolchain
cd ..

export gio_can_sniff=yes

mkdir -p objdir-target
cd objdir-target
do_configure target \
            --disable-dependency-tracking \
            --enable-silent-rules \
            --disable-glibtest \
            --disable-gtk-doc-html \
            --with-included-loaders=yes \
            --with-libpng \
            --with-libjpeg \
            --with-libtiff \
            --without-libjasper \

make
make_install
