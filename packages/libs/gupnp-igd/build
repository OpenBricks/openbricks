#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug"
fi

cd $BUILD/$1*
do_configure \
            --disable-dependency-tracking \
            $DEBUG_CONFIG \
            --enable-silent-rules \
            --disable-gtk-doc \
            --disable-python \

make
make_install
