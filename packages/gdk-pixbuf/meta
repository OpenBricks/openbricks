PKG_NAME=gdk-pixbuf
PKG_VERSION=2.25.0
PKG_URL="http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.25/gdk-pixbuf-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="GLib libpng jpeg tiff"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEV_DEPENDS="toolchain"
PKG_BUILD_DEPENDS="$PKG_DEV_DEPENDS GLib-host"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="GNOME image loading library"
PKG_LONGDESC="An image loading library used with GNOME."
