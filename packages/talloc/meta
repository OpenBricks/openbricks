PKG_NAME=talloc
PKG_VERSION=2.0.1
PKG_URL="http://samba.org/ftp/talloc/talloc-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="hierarchical pool based memory allocator"
PKG_LONGDESC="A hierarchical pool based memory allocator with destructors. It uses reference counting to determine when memory should be freed."
