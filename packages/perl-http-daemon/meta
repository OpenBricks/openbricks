PKG_NAME=perl-http-daemon
PKG_VERSION=6.00
PKG_URL="$CPAN_SRCS/G/GA/GAAS/HTTP-Daemon-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="perl perl-lwp-mediatypes perl-html-tagset perl-html-parser perl-http-message"
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="a simple http server class"
PKG_LONGDESC="Instances of the HTTP::Daemon class are HTTP/1.1 servers that listen on a socket for incoming requests. The HTTP::Daemon is a subclass of IO::Socket::INET, so you can perform socket operations directly on it too."
