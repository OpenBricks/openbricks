PKG_NAME=opkg
PKG_VERSION=0.1.8
PKG_URL="http://opkg.googlecode.com/files/opkg-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain curl"
PKG_RUN_DEPENDS="$TARGET_LIBC curl"
PKG_PRIORITY=required
PKG_SECTION=admin
PKG_SHORTDESC="lightweight package management system"
PKG_LONGDESC="Opkg is a lightweight package management system based on Ipkg."
