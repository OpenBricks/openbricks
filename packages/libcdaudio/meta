PKG_NAME=libcdaudio
PKG_VERSION=0.99.12p2
PKG_URL="$SFNET_SRCS/libcdaudio/libcdaudio/$PKG_VERSION/libcdaudio-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="library for controlling a CD-ROM when playing audio CDs"
PKG_LONGDESC="This library provides functions for controlling an audio CD: starting, stopping, ejecting, etc. It also provides an interface to the CDDB and CD Index servers."
