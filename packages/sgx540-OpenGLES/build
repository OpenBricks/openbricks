#!/bin/sh

. config/options

cd $BUILD/$1*

install_dir="$PWD/.install"
install_dir_debug="$PWD/.install-debuginfo"

rm -rf "$install_dir"
mkdir -p "$install_dir"
chmod a+x usr/lib/lib*.so* usr/lib/xorg/modules/drivers/pvr_drv.so
cp -PR etc "$install_dir/etc"
cp -PR usr "$install_dir/usr"

strip_libs "$install_dir"     "$install_dir_debug/usr/lib/debug"
strip_bins "$install_dir/usr" "$install_dir_debug/usr/lib/debug"
