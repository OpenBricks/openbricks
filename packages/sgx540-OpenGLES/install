#!/bin/sh

. config/options

cd $BUILD/$1*

do_install etc/powervr.ini
do_install usr/bin/pvrsrvinit
do_install usr/lib/lib*.so*
do_install usr/share/sgx-lib

if pkg_uses $1 devtools; then
  do_install usr/bin/eglinfo
fi

if pkg_uses $1 xorg; then
  do_install etc/X11/xorg.conf.d/99-pvr.conf
  do_install usr/bin/xgles1test1
  do_install usr/bin/xgles2test1
  do_install usr/bin/xmultiegltest
  do_install usr/bin/xovg_unit_test
  do_install usr/lib/xorg/modules/drivers/pvr_drv.so
fi

exit 0
