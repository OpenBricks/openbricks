PKG_NAME=chromaprint
PKG_VERSION=1.0
PKG_URL="https://bitbucket.org/acoustid/chromaprint/downloads/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="ffmpeg taglib"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain cmake boost"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="extract fingerprints from any audio source."
PKG_LONGDESC="A client-side library that implements a custom algorithm for extracting fingerprints from any audio source."
