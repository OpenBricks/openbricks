#!/bin/sh

. config/options
get_meta $1

cd $BUILD/${PKG_NAME}-${PKG_VERSION}

mkdir -p objdir-host
cd objdir-host
do_configure host \
  --without-zlib \
  --without-bzip2 \

make
make_install toolchain
sed -i "s:\(['= ]\)/usr:\\1$ROOT/$TOOLCHAIN:g" .install/usr/bin/freetype-config
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target \
  --with-zlib \
  --with-bzip2 \

make
make_install
sed -i "s:\(['= ]\)/usr:\\1$LIB_PREFIX:g" .install/usr/bin/freetype-config
