#!/bin/sh

. config/options

cd $BUILD/$1*/hostapd

cp defconfig .config
cat >> .config <<EOF
BINDIR=/usr/sbin
CONFIG_TLS=gnutls
CONFIG_DRIVER_NL80211=y
CONFIG_GNUTLS_EXTRA=y
CONFIG_CTRL_IFACE_DBUS_NEW=y
CONFIG_CTRL_IFACE_DBUS_INTRO=y
EOF

if [ "$DEBUG" = no ]; then
  echo "CONFIG_NO_STDOUT_DEBUG=y" >> .config
fi

exit 0
