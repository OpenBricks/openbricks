PKG_NAME=pciutils
PKG_VERSION=3.1.7
PKG_URL="http://www.kernel.org/pub/software/utils/pciutils/pciutils-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC pciids"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=system
PKG_SHORTDESC="Linux PCI Utilities"
PKG_LONGDESC="This package contains various utilities for inspecting and setting of devices connected to the PCI bus."
