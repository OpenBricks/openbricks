PKG_NAME=bc
PKG_VERSION=1.06
PKG_URL="http://ftp.gnu.org/gnu/bc/bc-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="an arbitrary precision numeric processing language."
PKG_LONGDESC="bc is an arbitrary precision numeric processing language. Syntax is similar to C, but differs in many substantial areas. It supports interactive execution of statements. bc is a utility included in the POSIX P1003.2/D11 draft standard."
