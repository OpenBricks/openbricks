PKG_DEPENDS="$TARGET_LIBC dbus acl fontconfig freetype libungif libjpeg-turbo libpng libxml2 libxslt gnutls"
PKG_DEPENDS_alsa="alsa-lib"
PKG_DEPENDS_gstreamer="gstreamer gst-plugins-base"
PKG_DEPENDS_opengl="mesa libglu"
PKG_DEPENDS_osmesa="mesa"
PKG_REQUIRES_USE_osmesa="mesa:osmesa"
PKG_DEPENDS_pulseaudio="pulseaudio"
PKG_DEPENDS_xorg="libX11 libXi libXext libXcomposite libXcursor libXrandr libXrender libXt libXxf86vm"
