PKG_NAME=nano
PKG_VERSION=2.2.6
PKG_URL="http://www.nano-editor.org/dist/v2.2/nano-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC ncurses"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="small, friendly text editor inspired by Pico"
PKG_LONGDESC="GNU nano is an easy-to-use text editor originally designed as a replacement for Pico, the ncurses-based editor from the non-free mailer package Pine"
