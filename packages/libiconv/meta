PKG_NAME=libiconv
PKG_VERSION=1.13
PKG_URL="http://ftp.gnu.org/pub/gnu/libiconv/libiconv-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC gettext"
PKG_BUILD_DEPENDS="toolchain gettext"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="The GNU iconv library"
PKG_LONGDESC="This library provides an iconv() implementation, for use on systems which don't have one, or whose implementation cannot convert from/to Unicode."
