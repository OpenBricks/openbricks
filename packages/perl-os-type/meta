PKG_NAME=perl-os-type
PKG_VERSION=1.002
PKG_URL="$CPAN_SRCS/D/DA/DAGOLDEN/Perl-OSType-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Map Perl operating system names to generic types"
PKG_LONGDESC="Modules that provide OS-specific behaviors often need to know if the current operating system matches a more generic type of operating systems."
