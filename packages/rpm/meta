PKG_NAME=rpm
PKG_VERSION=5.3.5
PKG_URL="http://rpm5.org/files/rpm/rpm-5.3/rpm-$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC zlib bzip2 db expat openssl sqlite popt beecrypt"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=admin
PKG_SHORTDESC="package manager for RPM"
PKG_LONGDESC="The RPM Package Manager (RPM) is a command-line driven package management system capable of installing, uninstalling, verifying, querying, and updating computer software packages."
