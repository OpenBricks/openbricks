#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build font-util

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-shared \
            --enable-static \
            --with-fontdir=$XORG_PATH_FONTS
make UTIL_DIR="`ls -d $ROOT/$BUILD/font-util*`"
