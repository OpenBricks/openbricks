#!/bin/sh

. config/options

fix_png_config () {
  for i in libpng libpng14; do
    sed -i "s%^libdir=.*%libdir=\"$LIB_PREFIX/lib\"%" \
      .install/usr/bin/$i-config
    sed -i "s%^includedir=.*%includedir=\"$LIB_PREFIX/include/libpng14\"%" \
      .install/usr/bin/$i-config
  done
}

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host
do_configure host
make
make_install toolchain
fix_png_config
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target
make
make_install
fix_png_config
