PKG_NAME=libpng
PKG_VERSION=1.4.3
PKG_URL="http://downloads.sourceforge.net/libpng/libpng-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain zlib"
PKG_RUN_DEPENDS="$TARGET_LIBC zlib"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="PNG library"
PKG_LONG_DESC="libpng is a library implementing an interface for reading and writing PNG (Portable Network Graphics) format files."
