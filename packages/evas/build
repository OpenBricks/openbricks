#!/bin/sh

. config/options

if [ "$XORG" = yes ]; then
  WITH_X="--with-x --enable-software-xlib --enable-software-16-x11 --enable-xrender-x11 --enable-gl-x11"
  EXTRA_LIBS="-lstdc++"
fi

if [ "$SDL" = yes ]; then
  CFG_SDL="--enable-sdl-primitive --enable-software-sdl"
  [ "$XORG" = yes -a $TARGET_ARCH != arm ] && CFG_SDL="$CFG_SDL --enable-gl-sdl"
else
  CFG_SDL="--disable-sdl-primitive --disable-software-sdl --disable-gl-sdl"
fi

if [ $TARGET_ARCH = arm ]; then
  OPENGL_ES="--enable-gl-flavor-gles --enable-gles-variety-sgx --enable-cpu-neon"
fi

[ "$TARGET_LIBC" = "uClibc" ] && EXTRA_LIBS="-liconv $EXTRA_LIBS"

cd $BUILD/$1*
export LIBS="$EXTRA_LIBS"
do_configure \
            --enable-pthreads \
            --enable-pipe-render \
            --enable-async-preload \
            --enable-async-events \
            --enable-async-render \
            --disable-doc \
            --enable-image-loader-eet \
            --enable-image-loader-gif \
            --enable-image-loader-jpeg \
            --enable-image-loader-png \
            --enable-image-loader-tiff \
            --enable-image-loader-pmaps \
            --enable-image-loader-xpm \
            --enable-image-loader-bmp \
            --enable-image-loader-tga \
            --enable-font-loader-eet \
            --disable-software-xcb \
            --disable-xrender-xcb \
            --enable-fb \
            $CFG_SDL \
            $OPENGL_ES \
            $WITH_X \

make
make_install
