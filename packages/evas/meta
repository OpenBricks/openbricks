PKG_NAME=evas
PKG_URL="http://download.enlightenment.org/snapshots/2010-06-07/evas-0.9.9.49539.tar.bz2"
PKG_VERSION=0.9.9.49539
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain eina eet libpng jpeg tiff libungif freetype fontconfig"
PKG_RUN_DEPENDS="$TARGET_LIBC eina eet libpng jpeg tiff libungif freetype fontconfig"
if [ "$TARGET_LIBC" = "uClibc" ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libiconv"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libiconv"
fi
if [ "$TARGET_ARCH" = arm ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS sgx-OpenGLES"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS sgx-OpenGLES"
fi
if [ "$XORG" = yes ]; then
  PKG_BUILD_DEPENDS="$PKG_BUILD_DEPENDS libX11 libXrender mesa"
  PKG_RUN_DEPENDS="$PKG_RUN_DEPENDS libX11 libXrender mesa"
fi
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORT_DESC="Enlightenment DR17 advanced canvas library"
PKG_LONG_DESC="Evas is an advanced canvas library, providing six engines for rendering: X11, OpenGL (hardware accelerated), DirectFB, the framebuffer, Microsof Windows and Qtopia. Due to its simple API, evas can be developed with rapidly, and cleanly."
