PKG_NAME=eeze
PKG_VERSION=1.0.1
PKG_URL="http://download.enlightenment.org/releases/eeze-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC ecore udev"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="EFL wrapper for udev"
PKG_LONGDESC="Eeze is a library for manipulating devices through udev with a simple and fast API. It interfaces directly with libudev, avoiding such middleman daemons as udisks/upower or hal, to immediately gather device information the instant it becomes known to the system."
