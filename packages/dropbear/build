#!/bin/sh

. config/options

cd $BUILD/$1*

do_configure \
             --enable-zlib \
             --disable-pam \
             --enable-openpty \
             --enable-syslog \
             --enable-shadow \
             --disable-lastlog \
             --disable-utmp \
             --disable-utmpx \
             --disable-wtmp \
             --disable-wtmpx \
             --enable-loginfunc \
             --disable-pututline \
             --disable-pututxline \

export MULTI=1
export PROGRAMS="dropbear dropbearkey"

make
make_install
ln -s dropbearmulti .install/usr/bin/dropbear
ln -s dropbearmulti .install/usr/bin/dropbearkey
