PKG_NAME=dropbear
PKG_VERSION=2012.55
PKG_URL="http://matt.ucc.asn.au/dropbear/releases/dropbear-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_DEPENDS="zlib"
PKG_USE="dbclient scp"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=net
PKG_SHORTDESC="lightweight SSH2 server and client"
PKG_LONGDESC=" dropbear is a SSH 2 server and client designed to be small enough to be used in small memory environments, while still being functional and secure enough for general use. It implements most required features of the SSH 2 protocol, and other features such as X11 and authentication agent forwarding."
