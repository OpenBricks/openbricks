PKG_NAME=lame
PKG_VERSION=3.98.4
PKG_URL="$SFNET_SRCS/lame/lame/$PKG_VERSION/lame-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain nasm"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="LAME Ain't an MP3 Encoder"
PKG_LONGDESC="Lame is a program which can be used to create compressed audio files. (Lame aint MP3 encoder). These audio files can be played back by popular mp3 players such as mpg123. To read from stdin, use "-" for <infile>. To write to stdout, use a "-" for <outfile>."
