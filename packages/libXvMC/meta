PKG_NAME=libXvMC
PKG_VERSION=1.0.6
PKG_URL="http://xorg.freedesktop.org/archive/individual/lib/libXvMC-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC libX11 libXv"
PKG_BUILD_DEPENDS="toolchain libX11 libXv"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="X11 Video extension library"
PKG_LONGDESC="libXvMC provides an X Window System client interface to the XVideo-MotionCompensation extension to the X protocol. The XVideo-MotionCompensation extension allows for further accelerated drawing of videos.  Video data may be sent at earlier stages of the decoding pipeline than raw YUV data.  At the moment, driver support for XvMC is poor to non-existent."
