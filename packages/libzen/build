#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

cd Project/GNU/Library
sed -i -e "s:-O2::" configure.ac

do_autoconf
do_configure --enable-unicode

make
make_install

cd -
cp -R Project/GNU/Library/.install .
cp Source/ZenLib/*.h .install/usr/include/ZenLib/

cp -R Project/GNU/Library/.install-debuginfo .
