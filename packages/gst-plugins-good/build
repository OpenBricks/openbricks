#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug --disable-profiling --disable-gcov"
fi

if pkg_uses $1 xorg; then
  XORG_CONFIG="--with-x --enable-x --enable-xvideo --enable-xshm"
else
  XORG_CONFIG="--without-x --disable-x --disable-xvideo --disable-xshm"
fi

if pkg_uses $1 pulseaudio; then
  PULSE_CONFIG="--enable-pulse"
else
  PULSE_CONFIG="--disable-pulse"
fi

export LIBS="-L$SYSROOT_PREFIX/usr/lib"

cd $BUILD/$1*
do_autoconf
do_configure \
            --disable-nls \
            --disable-rpath \
            $DEBUG_CONFIG \
            --disable-gtk-doc \
            --enable-gconftool \
            --enable-videofilter \
            --enable-orc \
            --enable-alpha \
            --enable-apetag \
            --enable-audiofx \
            --enable-auparse \
            --enable-autodetect \
            --enable-avi \
            --enable-cutter \
            --enable-debugutils \
            --enable-deinterlace \
            --enable-effectv \
            --enable-equalizer \
            --enable-flv \
            --enable-id3demux \
            --disable-icydemux \
            --enable-interleave \
            --enable-flx \
            --disable-goom \
            --disable-goom2k1 \
            --enable-law \
            --enable-level \
            --enable-matroska \
            --enable-monoscope \
            --enable-multifile \
            --enable-multipart \
            --enable-qtdemux \
            --disable-replaygain \
            --enable-rtp \
            --enable-rtpmanager \
            --enable-rtsp \
            --disable-shapewipe \
            --enable-smpte \
            --disable-spectrum \
            --enable-udp \
            --enable-videobox \
            --enable-videocrop \
            --enable-videomixer \
            --disable-wavenc \
            --enable-wavparse \
            --disable-y4m \
            --disable-directsound \
            --disable-oss \
            --disable-sunaudio \
            --disable-osx_audio \
            --disable-osx_video \
            --enable-gst_v4l2 \
            --disable-aalib \
            --disable-aalibtest \
            --disable-annodex \
            --disable-cairo \
            --disable-esd \
            --disable-esdtest \
            --disable-flac \
            --disable-gconf \
            --disable-gdk_pixbuf \
            --disable-hal \
            --disable-jpeg \
            --disable-libcaca \
            --disable-libdv \
            --disable-libpng \
            --disable-dv1394 \
            --disable-shout2 \
            --disable-shout2test \
            --disable-soup \
            --disable-speex \
            --disable-taglib \
            --disable-wavpack \
            --enable-zlib \
            --disable-bz2 \
            $XORG_CONFIG \
            $PULSE_CONFIG \

make
make_install
