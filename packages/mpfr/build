#!/bin/sh

. config/options

$SCRIPTS/install ccache
$SCRIPTS/install gmp

setup_toolchain host

cd $BUILD/$1*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --disable-shared \
             --enable-static \
             --with-gmp-include="$ROOT/$TOOLCHAIN/include" \
             --with-gmp-lib="$ROOT/$TOOLCHAIN/lib" \

make
