PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Graphical layout and animation library"
PKG_LONGDESC="Edje is a graphical layout and animation library for animated resizable, compressed and scalable themes. It is the theming engine behind Enlightenment DR 0.17."
