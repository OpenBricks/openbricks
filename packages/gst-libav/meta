PKG_NAME=gst-libav
PKG_VERSION=1.0.1
PKG_URL="http://gstreamer.freedesktop.org/src/gst-libav/gst-libav-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="gstreamer gst-plugins-base libav bzip2 orc"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="libav plugin for GStreamer"
PKG_LONGDESC="This GStreamer plugin supports a large number of audio and video compression formats through the use of the libav library.  The plugin contains GStreamer elements for decoding 90+ formats (AVI, MPEG, OGG, Matroska, ASF, ...), demuxing 30+ formats and colorspace conversion."
