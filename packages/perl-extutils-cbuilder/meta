PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Compile and link C code for Perl modules"
PKG_LONGDESC="This module can build the C portions of Perl modules by invoking the appropriate compilers and linkers in a cross-platform manner."
