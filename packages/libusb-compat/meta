PKG_NAME=libusb-compat
PKG_VERSION=0.1.4
PKG_URL="$SFNET_SRCS/libusb/libusb-compat-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain libusb"
PKG_PRIORITY=required
PKG_SECTION=libs
PKG_SHORTDESC="userspace USB programming library -- legacy compat layer"
PKG_LONGDESC="Library for programming USB applications without the knowledge of Linux kernel internals."
