#!/bin/sh

. config/options

require_cxx $1

cd $BUILD/$1*

scons \
	destdir=.install \
	cross=True \
	enable_swscale=False \
	graphics=dfb \
	graphics_outputtype=omapfb \
	database=sqlite3 \
	media=gstreamer

# git version
