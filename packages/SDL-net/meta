PKG_NAME=SDL-net
PKG_VERSION=1.2.7
PKG_URL="http://www.libsdl.org/projects/SDL_net/release/SDL_net-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC SDL"
PKG_BUILD_DEPENDS="toolchain SDL"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="network library for Simple DirectMedia Layer"
PKG_LONGDESC=" This is a small, low-level, cross-platform networking library, that can be used with the Simple DirectMedia Layer library"
