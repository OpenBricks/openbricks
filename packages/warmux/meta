PKG_NAME=warmux
PKG_VERSION=11.01
PKG_URL="http://download.gna.org/warmux/warmux-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS="SDL SDL-image SDL-mixer SDL-ttf SDL-gfx SDL-net curl libxml2 libvorbis"
PKG_USE="cxx"
PKG_PRIORITY=optional
PKG_SECTION=games
PKG_SHORTDESC="funny fight game on 2D maps"
PKG_LONGDESC="Warmux is a free game where funny animals fight on a 2D map with funny weapons. Though currently under heavy development, it is already very playable, with lots of weapons (Dynamite, Baseball Bat, Teleportation, etc.). For the moment, you can not play against computer opponents."
