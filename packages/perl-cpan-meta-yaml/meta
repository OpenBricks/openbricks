PKG_NAME=perl-cpan-meta-yaml
PKG_VERSION=0.003
PKG_URL="$CPAN_SRCS/D/DA/DAGOLDEN/CPAN-Meta-YAML-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_DEPENDS=perl
PKG_PRIORITY=optional
PKG_SECTION=perl
PKG_SHORTDESC="Read and write a subset of YAML for CPAN Meta files"
PKG_LONGDESC="This module implements a subset of the YAML specification for use in reading and writing CPAN metadata files like META.yml and MYMETA.yml. It should not be used for any other general YAML parsing or generation task."
