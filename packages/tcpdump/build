#!/bin/sh

. config/options

cd $BUILD/$1*

pkg_uses $1 openssl && OPT_CRYPTO="--with-crypto=$SYSROOT_PREFIX/usr/local" || OPT_CRYPTO="--with-crypto=no"
pkg_uses $1 ipv6 && OPT_IPV6="--enable-ipv6" || OPT_IPV6="--disable-ipv6"

# When cross-compiling, configure can't set linux version
# forcing it
sed -i -e 's/ac_cv_linux_vers=unknown/ac_cv_linux_vers=2/' configure

do_configure \
       --host=$TARGET_NAME \
       --with-pcap=linux \
       $OPT_CRYPTO \
       $OPT_IPV6 \


# discard native system includes
sed -i "s%-I/usr/include%%g" Makefile

make
make_install

rm -f .install/usr/sbin/tcpdump.*
