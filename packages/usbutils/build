#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure \
  --datadir=/usr/share/misc \
  --datarootdir=/usr/share \
  --mandir=/usr/share/man \

make
make_install
mv .install/usr/share/misc/pkgconfig .install/usr/share
sed -i 's%usbids=.*%usbids=/usr/share/misc/usb.ids%' \
  .install/usr/share/pkgconfig/usbutils.pc
