#!/bin/sh

. config/options

cd $BUILD/$1*
mkdir -p objdir-host
cd objdir-host
do_configure host \
  --disable-gtk-doc \
  --disable-gtk-doc-html \
  --disable-gtk-doc-pdf \

make
make_install toolchain
cd ..

mkdir -p objdir-target
cd objdir-target
do_configure target \
  --disable-gtk-doc \
  --disable-gtk-doc-html \
  --disable-gtk-doc-pdf \

make
make_install
sed -i "s%^orcc=.*%orcc=$ROOT/$TOOLCHAIN/bin/orcc%" \
  .install/usr/lib/pkgconfig/orc-0.4.pc
cd ..
