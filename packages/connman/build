#!/bin/sh

. config/options

cd $BUILD/$1*

if pkg_uses $1 wifi; then
  WIFI_CONFIG="--enable-wifi"
else
  WIFI_CONFIG="--disable-wifi"
fi

if pkg_uses $1 bluetooth; then
  BLUETOOTH_CONFIG="--enable-bluetooth"
else
  BLUETOOTH_CONFIG="--disable-bluetooth"
fi

if pkg_uses $1 devtools; then
  DEVTOOLS_CONFIG="--enable-client --enable-test"
else
  DEVTOOLS_CONFIG="--disable-client --disable-test"
fi

do_configure \
            --enable-ethernet \
            $WIFI_CONFIG \
            $BLUETOOTH_CONFIG \
            --disable-hh2serial-gps \
            --disable-ofono \
            --disable-dhclient \
            --disable-openconnect \
            --disable-portal \
            --enable-loopback \
            --enable-dnsproxy \
            --disable-google \
            --disable-meego \
            --disable-iwmx \
            --disable-iospm \
            --disable-ntpd \
            --disable-polkit \
            $DEVTOOLS_CONFIG \
            --disable-tools \
            --enable-udev \
            --enable-datafiles \

make
make_install

if pkg_uses $1 devtools; then
  mkdir -p .install/usr/bin 
  cp -P client/cm .install/usr/bin
  cp -P test/* .install/usr/bin
fi

exit 0
