#!/bin/sh

. config/options

cd $BUILD/$1*

if pkg_uses $1 wifi; then
  WIFI_CONFIG="--enable-wifi"
else
  WIFI_CONFIG="--disable-wifi"
fi

if pkg_uses $1 bluetooth; then
  BLUETOOTH_CONFIG="--enable-bluetooth"
else
  BLUETOOTH_CONFIG="--disable-bluetooth"
fi

do_configure \
            --enable-ethernet \
            $WIFI_CONFIG \
            $BLUETOOTH_CONFIG \
            --disable-hh2serial-gps \
            --disable-ofono \
            --disable-openconnect \
            --disable-openvpn \
            --disable-vpnc \
            --disable-l2tp \
            --disable-pptp \
            --disable-iwmx \
            --disable-iospm \
            --enable-test \
            --disable-tist \
            --disable-nmcompat \
            --disable-polkit \
            --enable-loopback \
            --enable-client \
            --disable-tools \
            --enable-datafiles \

make
make_install

mkdir -p .install/usr/bin
cp -P client/cm .install/usr/bin

mkdir -p .install/etc/connman
cp -P $ROOT/$PACKAGES/$1/config/main.conf .install/etc/connman

systemctl_enable connman.service

exit 0
