#!/bin/sh

. config/options

require_cxx $1

if [ "$XORG" = yes ]; then
  WITH_X="--with-x --enable-software-x11 --enable-software-16-x11 --enable-opengl-x11"
fi

if [ "$DIRECTFB" = yes ]; then
  CFG_DFB="--enable-directfb"
else
  CFG_DFB="--disable-directfb"
fi

if [ "$SDL" = yes ]; then
  CFG_SDL="--enable-software-sdl"
  [ "$XORG" = yes -a $TARGET_ARCH != arm ] && CFG_SDL="$CFG_SDL --enable-opengl-sdl"
else
  CFG_SDL="--disable-software-sdl --disable-opengl-sdl"
fi

cd $BUILD/$1*
do_configure \
            --datadir=/usr/share \
            --enable-fb \
            $CFG_DFB \
            $CFG_SDL \
            $WITH_X \

make
make_install
