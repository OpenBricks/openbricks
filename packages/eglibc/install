#!/bin/sh

. config/options

cd $BUILD/$1*

do_install lib/ld*
do_install lib/libc*
do_install lib/libdl*
do_install lib/libpthread*
do_install lib/libm*
do_install lib/libutil*
do_install lib/librt*
do_install lib/libnss_dns*
do_install lib/libnsl*
do_install lib/libnss_compat*
do_install lib/libnss_files*
do_install lib/libanl*
do_install lib/libBrokenLocale*
do_install lib/libnsl*
do_install lib/libSegFault*

pkg_uses $1 devtools && do_install usr/bin/ldd

do_install usr/bin/locale

mkdir -p $INSTALL/etc
cp $ROOT/$PACKAGES/$1/config/nsswitch.conf $INSTALL/etc
