PKG_VERSION=2.2
PKG_URL="http://pciids.sourceforge.net/v${PKG_VERSION}/pci.ids.bz2"
PKG_REV=1
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="the PCI ID database"
PKG_LONGDESC="This is a public repository of all known ID's used in PCI devices: ID's of vendors, devices, subsystems and device classes. It is used in various programs (e.g., The PCI Utilities) to display full human-readable names instead of cryptic numeric codes."
