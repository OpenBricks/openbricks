PKG_NAME=libraw1394
PKG_VERSION=2.0.5
PKG_URL="$SFNET_SRCS/libraw1394/libraw1394-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="devtools"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="library for direct access to IEEE 1394 bus (aka FireWire)"
PKG_LONGDESC="libraw1394 is the only supported interface to the kernel side raw1394 of the Linux IEEE-1394 subsystem, which provides direct access to the connected 1394 buses to user space.  Through libraw1394/raw1394, applications can directly send to and receive from other nodes without requiring a kernel driver for the protocol in question."
