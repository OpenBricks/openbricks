+void CJpegHwDecVMeta::ToBGRA(unsigned char *dst, unsigned int pitch, 
+                             unsigned int width, unsigned int height)
+{
+  uint32_t *p = (uint32_t *)m_picture.pBuf;
+  unsigned skip = (m_picture.pic.picWidth >> 1) - ((width + 1) >> 1);
+  
+#if 0
