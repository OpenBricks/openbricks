#!/bin/sh

. config/options

require_glibc $1

get_meta $1
cd $PKG_BUILD_DIR

mkdir -p .install

if [ "$ARM_HARDFLOAT_ABI" = yes ] ; then 
  cp -PR hfp/usr .install
else
  cp -PR sfp/usr .install
fi

sed -i -e "s:prefix=/usr:prefix=$LIB_PREFIX:" .install/usr/lib/pkgconfig/*.pc

if [ "$DEVROOTFS" = yes ] ; then
  ln -sf .install .install-unstripped
fi