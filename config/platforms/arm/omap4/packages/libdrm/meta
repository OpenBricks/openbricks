PKG_NAME=libdrm
PKG_VERSION=2.4.32
PKG_URL="http://dri.freedesktop.org/libdrm/libdrm-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_DEPENDS="libpciaccess systemd"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain libpthread-stubs"
PKG_USE="intel radeon nouveau vmwgfx glamo omap"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="Userspace interface to kernel DRM services"
PKG_LONGDESC="This library implements the userspace interface to the kernel DRM services.  DRM stands for Direct Rendering Manager, which is the kernelspace portion of the Direct Rendering Infrastructure (DRI). The DRI is currently used on Linux to provide hardware-accelerated OpenGL drivers."
