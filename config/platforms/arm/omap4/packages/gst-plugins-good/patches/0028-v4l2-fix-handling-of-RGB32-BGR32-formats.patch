From dac619e0909da5c9c90a7159d37a5c82ec9addb0 Mon Sep 17 00:00:00 2001
From: Rob Clark <rob@ti.com>
Date: Tue, 14 Sep 2010 07:42:50 -0500
Subject: [PATCH 28/32] v4l2: fix handling of RGB32/BGR32 formats

bpp is 32, but depth is only 24..
---
 sys/v4l2/gstv4l2object.c |   12 +++++++-----
 1 files changed, 7 insertions(+), 5 deletions(-)

diff --git a/sys/v4l2/gstv4l2object.c b/sys/v4l2/gstv4l2object.c
index 321d496..606ec21 100644
--- a/sys/v4l2/gstv4l2object.c
+++ b/sys/v4l2/gstv4l2object.c
@@ -1163,14 +1163,16 @@ gst_v4l2_object_v4l2fourcc_to_structures (guint32 fourcc,
           b_mask = 0xff0000;
           break;
         case V4L2_PIX_FMT_RGB32:
-          bpp = depth = 32;
+          depth = 24;
+          bpp = 32;
           endianness = G_BIG_ENDIAN;
           r_mask = 0xff000000;
           g_mask = 0x00ff0000;
           b_mask = 0x0000ff00;
           break;
         case V4L2_PIX_FMT_BGR32:
-          bpp = depth = 32;
+          depth = 24;
+          bpp = 32;
           endianness = G_BIG_ENDIAN;
           r_mask = 0x000000ff;
           g_mask = 0x0000ff00;
@@ -1461,13 +1463,13 @@ gst_v4l2_object_get_caps_info (GstV4l2Object * v4l2object, GstCaps * caps,
     }
   } else if (!strcmp (mimetype, "video/x-raw-rgb") ||
       !strcmp (mimetype, "video/x-raw-rgb-strided")) {
-    gint depth, endianness, r_mask;
+    gint bpp, endianness, r_mask;
 
-    gst_structure_get_int (structure, "depth", &depth);
+    gst_structure_get_int (structure, "bpp", &bpp);
     gst_structure_get_int (structure, "endianness", &endianness);
     gst_structure_get_int (structure, "red_mask", &r_mask);
 
-    switch (depth) {
+    switch (bpp) {
       case 8:
         fourcc = V4L2_PIX_FMT_RGB332;
         *rs = *w;
