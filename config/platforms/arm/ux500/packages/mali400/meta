PKG_NAME=mali400
if [ "$ARM_HARDFLOAT_ABI" = yes ]; then
  PKG_VERSION=2.1-12
  PKG_SUFFIX=armhf
else
  PKG_VERSION=2.1-7
  PKG_SUFFIX=armel
fi

PKG_URL="http://ppa.launchpad.net/igloocommunity-maintainers/snowball/ubuntu/pool/main/m/mali400/mali400_${PKG_VERSION}_${PKG_SUFFIX}.deb http://ppa.launchpad.net/igloocommunity-maintainers/snowball/ubuntu/pool/main/m/mali400/mali400-dev_${PKG_VERSION}_${PKG_SUFFIX}.deb"
PKG_REV=1
PKG_ARCH=arm
