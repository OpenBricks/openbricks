#!/bin/sh

. config/options

cd $BUILD/$1*

do_install usr/lib/xorg/modules/drivers/*_drv.so

mkdir -p $INSTALL/usr/lib/xorg/gpu
cp -P $PLATFORM_PACKAGES/$1/scripts/gpu $INSTALL/usr/lib/xorg/gpu/mali.sh

mkdir -p $INSTALL/etc/X11/gpu
cp -P $PLATFORM_PACKAGES/$1/config/90-mali.conf $INSTALL/etc/X11/gpu
